<div class="max-w-md mx-auto my-12 bg-white dark:bg-slate-800 p-8 rounded-xl shadow-md dark:shadow-slate-900/50 border border-transparent dark:border-slate-700">
  <h1 class="text-2xl font-bold mb-6 text-center text-sky-800 dark:text-sky-400">Crear una cuenta</h1>

  <%= form_with(model: @user, url: signup_path, class: "space-y-6") do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 dark:bg-red-900/20 text-red-700 dark:text-red-300 p-4 rounded-md mb-6 border border-red-200 dark:border-red-800">
        <h2 class="text-lg font-medium mb-2">Se encontraron <%= @user.errors.count %> errores:</h2>
        <ul class="list-disc pl-5">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1" %>
      <%= form.email_field :email, class: "form-input", placeholder: "tu@email.com", required: true %>
    </div>

    <div>
      <%= form.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1" %>
      <%= form.password_field :password, class: "form-input", required: true %>
      <p class="mt-1 text-xs text-gray-500 dark:text-slate-400">Mínimo 8 caracteres</p>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirmar contraseña", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1" %>
      <%= form.password_field :password_confirmation, class: "form-input", required: true %>
    </div>

    <div>
      <%= form.submit "Registrarse", class: "w-full bg-sky-500 hover:bg-sky-600 text-white py-2 px-4 rounded-full transition-all hover:shadow-md transform hover:scale-105 focus:outline-none" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600 dark:text-slate-400">
      ¿Ya tienes una cuenta?
      <%= link_to "Iniciar sesión", new_session_path, class: "font-medium text-sky-600 dark:text-sky-400 hover:underline" %>
    </p>
  </div>
</div>
