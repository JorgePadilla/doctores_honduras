<div class="max-w-md mx-auto my-12 bg-white p-8 rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold mb-6 text-center" style="color: #0369a1;">Crear una cuenta</h1>

  <%= form_with(model: @user, url: signup_path, class: "space-y-6") do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 text-red-700 p-4 rounded-md mb-6">
        <h2 class="text-lg font-medium mb-2">Se encontraron <%= @user.errors.count %> errores:</h2>
        <ul class="list-disc pl-5">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.email_field :email, class: "form-input", placeholder: "tu@email.com", required: true %>
    </div>

    <div>
      <%= form.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password, class: "form-input", required: true %>
      <p class="mt-1 text-xs text-gray-500">Mínimo 8 caracteres</p>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirmar contraseña", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password_confirmation, class: "form-input", required: true %>
    </div>

    <div>
      <%= form.submit "Registrarse", class: "w-full text-white py-2 px-4 rounded-md focus:outline-none transition duration-150 ease-in-out", style: "background-color: #0284c7;" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      ¿Ya tienes una cuenta? 
      <%= link_to "Iniciar sesión", new_session_path, class: "font-medium hover:underline", style: "color: #0284c7;" %>
    </p>
  </div>
</div>
