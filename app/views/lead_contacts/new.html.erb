<div class="container mx-auto px-4 py-8 max-w-3xl">
  <h1 class="text-2xl font-bold text-gray-800 mb-2">Contactar a <%= @supplier.name %></h1>
  <p class="text-gray-600 mb-6">Env&iacute;a un mensaje al proveedor para solicitar informaci&oacute;n sobre sus productos y servicios.</p>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden border border-gray-200">
    <div class="p-6">
      <%= form_with model: @lead_contact, url: supplier_lead_contacts_path(@supplier), method: :post, class: "space-y-6" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :name, "Nombre completo", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm", required: true %>
          </div>
          <div>
            <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm", required: true %>
          </div>
          <div>
            <%= f.label :phone, "Tel\u00E9fono (opcional)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.telephone_field :phone, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
          </div>
          <div>
            <%= f.label :organization, "Organizaci\u00F3n (opcional)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :organization, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :message, "Mensaje", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :message, rows: 5, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm", placeholder: "Describe lo que necesitas..." %>
        </div>

        <% if @lead_contact.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <ul class="text-sm text-red-600 list-disc list-inside">
              <% @lead_contact.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="flex justify-between">
          <%= link_to "Cancelar", supplier_path(@supplier), class: "py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <%= f.submit "Enviar Mensaje", class: "py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-500 hover:bg-sky-600 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
