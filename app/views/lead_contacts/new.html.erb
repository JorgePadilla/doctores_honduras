<div class="container mx-auto px-4 py-8 max-w-3xl">
  <h1 class="text-2xl font-bold text-gray-800 dark:text-white mb-2">Contactar a <%= @supplier.name %></h1>
  <p class="text-gray-600 dark:text-slate-400 mb-6">Envía un mensaje al proveedor para solicitar información sobre sus productos y servicios.</p>

  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden border border-gray-200 dark:border-slate-700">
    <div class="p-6">
      <%= form_with model: @lead_contact, url: supplier_lead_contacts_path(@supplier), method: :post, class: "space-y-6" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :name, "Nombre completo", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
            <%= f.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm dark:bg-slate-700 dark:border-slate-600 dark:text-white", required: true %>
          </div>
          <div>
            <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
            <%= f.email_field :email, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm dark:bg-slate-700 dark:border-slate-600 dark:text-white", required: true %>
          </div>
          <div>
            <%= f.label :phone, "Teléfono (opcional)", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
            <%= f.telephone_field :phone, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm dark:bg-slate-700 dark:border-slate-600 dark:text-white" %>
          </div>
          <div>
            <%= f.label :organization, "Organización (opcional)", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
            <%= f.text_field :organization, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm dark:bg-slate-700 dark:border-slate-600 dark:text-white" %>
          </div>
        </div>

        <div>
          <%= f.label :message, "Mensaje", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
          <%= f.text_area :message, rows: 5, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm dark:bg-slate-700 dark:border-slate-600 dark:text-white", placeholder: "Describe lo que necesitas..." %>
        </div>

        <% if @lead_contact.errors.any? %>
          <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-md p-4">
            <ul class="text-sm text-red-600 dark:text-red-300 list-disc list-inside">
              <% @lead_contact.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="flex justify-between">
          <%= link_to "Cancelar", supplier_path(@supplier), class: "py-2 px-4 border border-gray-300 rounded-full transition-all hover:shadow-md transform hover:scale-105 shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 dark:border-slate-600 dark:text-slate-300 dark:bg-slate-700 dark:hover:bg-slate-600" %>
          <%= f.submit "Enviar Mensaje", class: "py-2 px-4 border border-transparent rounded-full transition-all hover:shadow-md transform hover:scale-105 shadow-sm text-sm font-medium text-white bg-sky-500 hover:bg-sky-600 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
