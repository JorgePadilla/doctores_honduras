<div class="max-w-md mx-auto my-12 bg-white p-8 rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold mb-6 text-center" style="color: #0369a1;">¿Olvidaste tu contraseña?</h1>

  <%= form_with url: passwords_path, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.email_field :email, required: true, autofocus: true, autocomplete: "username", placeholder: "tu@email.com", value: params[:email], class: "form-input" %>
    </div>

    <div>
      <%= form.submit "Enviar instrucciones", class: "w-full text-white py-2 px-4 rounded-md focus:outline-none transition duration-150 ease-in-out", style: "background-color: #0284c7;" %>
    </div>
    
    <div class="text-center mt-4">
      <%= link_to "Volver a iniciar sesión", new_session_path, class: "text-sm hover:underline", style: "color: #0284c7;" %>
    </div>
  <% end %>
</div>
