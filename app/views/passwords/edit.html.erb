<div class="max-w-md mx-auto my-12 bg-white dark:bg-slate-800 p-8 rounded-xl shadow-md dark:shadow-slate-900/50 border border-transparent dark:border-slate-700">
  <h1 class="text-2xl font-bold mb-6 text-center text-sky-800 dark:text-sky-400">Actualizar tu contraseña</h1>

  <% if alert = flash[:alert] %>
    <div class="bg-red-50 dark:bg-red-900/20 text-red-700 dark:text-red-300 p-4 rounded-md mb-6 border border-red-200 dark:border-red-800">
      <%= alert %>
    </div>
  <% end %>

  <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :password, "Nueva contraseña", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1" %>
      <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Ingresa tu nueva contraseña", class: "form-input" %>
      <p class="mt-1 text-xs text-gray-500 dark:text-slate-400">Mínimo 8 caracteres</p>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirmar contraseña", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1" %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Repite tu nueva contraseña", class: "form-input" %>
    </div>

    <div>
      <%= form.submit "Guardar contraseña", class: "w-full bg-sky-500 hover:bg-sky-600 text-white py-2 px-4 rounded-full transition-all hover:shadow-md transform hover:scale-105 focus:outline-none" %>
    </div>
  <% end %>
</div>
