<div class="max-w-md mx-auto my-12 bg-white p-8 rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold mb-6 text-center" style="color: #0369a1;">Actualizar tu contraseña</h1>
  
  <% if alert = flash[:alert] %>
    <div class="bg-red-50 text-red-700 p-4 rounded-md mb-6 border border-red-200">
      <%= alert %>
    </div>
  <% end %>

  <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :password, "Nueva contraseña", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Ingresa tu nueva contraseña", class: "form-input" %>
      <p class="mt-1 text-xs text-gray-500">Mínimo 8 caracteres</p>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirmar contraseña", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Repite tu nueva contraseña", class: "form-input" %>
    </div>

    <div>
      <%= form.submit "Guardar contraseña", class: "w-full text-white py-2 px-4 rounded-md focus:outline-none transition duration-150 ease-in-out", style: "background-color: #0284c7;" %>
    </div>
  <% end %>
</div>
