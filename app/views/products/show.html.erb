<div class="container mx-auto px-4 py-8">
  <div class="max-w-5xl mx-auto mb-6 flex items-center">
    <a href="<%= supplier_path(@supplier) %>" class="inline-flex items-center px-5 py-2.5 rounded-full text-white font-medium transition-all shadow-md hover:shadow-lg transform hover:scale-105 bg-sky-500 hover:bg-sky-600">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Volver a <%= @supplier.name %>
    </a>
  </div>

  <div class="max-w-5xl mx-auto bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden mb-10 border border-transparent dark:border-slate-700">
    <div class="flex flex-col md:flex-row">
      <div class="md:w-1/2 p-6 flex items-center justify-center bg-gray-50 dark:bg-slate-700">
        <% if @product.image_url.present? %>
          <img src="<%= @product.image_url %>" alt="<%= @product.name %>" class="max-w-full max-h-96 object-contain">
        <% else %>
          <div class="w-full h-64 bg-gray-200 dark:bg-slate-600 rounded-lg flex items-center justify-center">
            <span class="text-gray-500 dark:text-slate-400 font-medium">Imagen no disponible</span>
          </div>
        <% end %>
      </div>

      <div class="md:w-1/2 p-6">
        <div class="border-l-4 pl-4 mb-6 border-primary-400 dark:border-sky-500">
          <h1 class="text-2xl font-bold mb-2 text-sky-600 dark:text-sky-400"><%= @product.name %></h1>
          <p class="text-gray-500 dark:text-slate-400">SKU: <%= @product.sku %></p>
        </div>

        <div class="mb-6">
          <h3 class="text-lg font-medium mb-2 text-sky-600 dark:text-sky-400">Descripción</h3>
          <p class="text-gray-700 dark:text-slate-300"><%= @product.description %></p>
        </div>

        <div class="flex justify-between items-center mb-6">
          <div>
            <h3 class="text-lg font-medium mb-1 text-sky-600 dark:text-sky-400">Categoría</h3>
            <span class="inline-block px-3 py-1 bg-gray-100 dark:bg-slate-700 text-gray-700 dark:text-slate-300 rounded-full text-sm">
              <%= @product.category %>
            </span>
          </div>

          <div class="text-right">
            <h3 class="text-lg font-medium mb-1 text-sky-600 dark:text-sky-400">Precio</h3>
            <span class="text-2xl font-bold text-sky-600 dark:text-sky-400">L. <%= number_with_precision(@product.price, precision: 2) %></span>
          </div>
        </div>

        <div class="border-t border-gray-200 dark:border-slate-700 pt-6">
          <h3 class="text-lg font-medium mb-4 text-sky-600 dark:text-sky-400">Información del Proveedor</h3>

          <div class="flex items-center mb-4">
            <% if @supplier.logo_url.present? %>
              <img src="<%= @supplier.logo_url %>" alt="<%= @supplier.name %>" class="w-12 h-12 object-contain mr-4 rounded-full">
            <% else %>
              <div class="w-12 h-12 bg-gray-200 dark:bg-slate-700 rounded-full flex items-center justify-center mr-4">
                <span class="text-gray-500 dark:text-slate-400 font-bold"><%= @supplier.name.first %></span>
              </div>
            <% end %>
            <div>
              <h4 class="font-medium text-sky-600 dark:text-sky-400"><%= @supplier.name %></h4>
              <p class="text-gray-600 dark:text-slate-400 text-sm"><%= @supplier.phone %></p>
            </div>
          </div>

          <a href="<%= supplier_path(@supplier) %>" class="inline-flex items-center px-5 py-2.5 text-white font-medium rounded-full transition-all shadow-md hover:shadow-lg transform hover:scale-105 bg-sky-500 hover:bg-sky-600">
            <span>Ver todos los productos</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
