<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-bold text-primary-700 dark:text-sky-400 mb-6">Mi Perfil</h1>

  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 p-6">
    <div class="space-y-4">
      <div>
        <h3 class="text-sm font-medium text-gray-500 dark:text-slate-400">Nombre</h3>
        <p class="text-gray-900 dark:text-white font-semibold"><%= @patient_profile.name %></p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500 dark:text-slate-400">Correo electrónico</h3>
        <p class="text-gray-900 dark:text-white"><%= Current.user.email %></p>
      </div>

      <% if @patient_profile.phone.present? %>
        <div>
          <h3 class="text-sm font-medium text-gray-500 dark:text-slate-400">Teléfono</h3>
          <p class="text-gray-900 dark:text-white"><%= @patient_profile.phone %></p>
        </div>
      <% end %>

      <% if @patient_profile.date_of_birth.present? %>
        <div>
          <h3 class="text-sm font-medium text-gray-500 dark:text-slate-400">Fecha de nacimiento</h3>
          <p class="text-gray-900 dark:text-white"><%= @patient_profile.date_of_birth.strftime("%d/%m/%Y") %></p>
        </div>
      <% end %>

      <% if @patient_profile.department.present? || @patient_profile.city.present? %>
        <div>
          <h3 class="text-sm font-medium text-gray-500 dark:text-slate-400">Ubicación</h3>
          <p class="text-gray-900 dark:text-white"><%= [@patient_profile.city&.name, @patient_profile.department&.name].compact.join(", ") %></p>
        </div>
      <% end %>
    </div>

    <div class="mt-6 pt-6 border-t border-gray-200 dark:border-slate-700">
      <%= link_to "Editar perfil", edit_paciente_profile_path, class: "inline-flex items-center bg-sky-500 hover:bg-sky-600 text-white px-5 py-2.5 rounded-full font-medium transition-all shadow-md hover:shadow-lg transform hover:scale-105" %>
    </div>
  </div>
</div>
