      <div style="background-color: #075985;" class="p-4 rounded text-white">primary-800</div>
      <div style="background-color: #0c4a6e;" class="p-4 rounded text-white">primary-900</div>
    </div>
    
    <!-- Secondary Colors -->
    <div class="space-y-4">
      <h2 class="text-xl font-semibold" style="color: #115e59;">Colores Secundarios</h2>
      
      <div style="background-color: #f0fdfa;" class="p-4 rounded">secondary-50</div>
      <div style="background-color: #ccfbf1;" class="p-4 rounded">secondary-100</div>
      <div style="background-color: #99f6e4;" class="p-4 rounded">secondary-200</div>
