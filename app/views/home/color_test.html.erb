    <div class="space-y-4">
      <h2 class="text-xl font-semibold" style="color: #075985;">Colores Primarios</h2>
      
      <div style="background-color: #f0f9ff;" class="p-4 rounded">primary-50</div>
      <div style="background-color: #e0f2fe;" class="p-4 rounded">primary-100</div>
      <div style="background-color: #bae6fd;" class="p-4 rounded">primary-200</div>
      <div style="background-color: #7dd3fc;" class="p-4 rounded">primary-300</div>
