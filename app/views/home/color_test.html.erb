    <h2 class="text-xl font-semibold mb-4" style="color: #075985;">Ejemplos de Componentes</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Buttons -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-medium mb-4" style="color: #0369a1;">Botones</h3>
        <div class="space-y-4">
          <button style="background-color: #0ea5e9;" class="text-white px-4 py-2 rounded-md">Botón Primario</button>
          <button style="background-color: #14b8a6;" class="text-white px-4 py-2 rounded-md">Botón Secundario</button>
          <button style="background-color: #f97316;" class="text-white px-4 py-2 rounded-md">Botón Acento</button>
        </div>
      </div>
      
      <!-- Cards -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-medium mb-4" style="color: #0369a1;">Tarjetas</h3>
        <div class="space-y-4">
          <div style="background-color: #e0f2fe; border-color: #bae6fd;" class="border p-4 rounded-md">
            <h4 class="font-medium" style="color: #075985;">Tarjeta Primaria</h4>
            <p style="color: #0369a1;">Contenido de ejemplo</p>
          </div>
          <div style="background-color: #ccfbf1; border-color: #99f6e4;" class="border p-4 rounded-md">
            <h4 class="font-medium" style="color: #115e59;">Tarjeta Secundaria</h4>
            <p style="color: #0f766e;">Contenido de ejemplo</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
