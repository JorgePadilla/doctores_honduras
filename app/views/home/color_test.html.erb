      <div style="background-color: #0f766e;" class="p-4 rounded text-white">secondary-700</div>
      <div style="background-color: #115e59;" class="p-4 rounded text-white">secondary-800</div>
      <div style="background-color: #134e4a;" class="p-4 rounded text-white">secondary-900</div>
    </div>
    
    <!-- Accent Colors -->
    <div class="space-y-4">
      <h2 class="text-xl font-semibold" style="color: #9a3412;">Colores Acentos</h2>
      
      <div style="background-color: #fff7ed;" class="p-4 rounded">accent-50</div>
      <div style="background-color: #ffedd5;" class="p-4 rounded">accent-100</div>
      <div style="background-color: #fed7aa;" class="p-4 rounded">accent-200</div>
