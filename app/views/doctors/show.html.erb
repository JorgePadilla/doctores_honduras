<div class="container mx-auto px-4 py-8">
  <div class="max-w-5xl mx-auto mb-6 flex items-center">
    <a href="/doctors" class="inline-flex items-center px-4 py-2 rounded-lg text-white font-medium transition-all shadow-sm hover:shadow-md" style="background-color: #38bdf8;">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Volver al directorio
    </a>
  </div>
  <div class="max-w-5xl mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="flex flex-col md:flex-row">
      <div class="md:w-1/3 p-6">
        <% if @doctor.image.attached? %>
          <%= image_tag @doctor.image, alt: @doctor.name, class: "w-full h-auto rounded-lg object-cover" %>
        <% else %>
          <div class="w-full h-64 bg-gray-200 rounded-lg flex items-center justify-center">
            <span class="text-gray-500">Sin imagen</span>
          </div>
        <% end %>
      </div>
      
      <div class="md:w-2/3 p-6">
        <h1 class="text-2xl font-bold mb-2" style="color: #38bdf8;"><%= @doctor.name %></h1>
        <p class="text-lg text-gray-600 mb-2">Especialista en <%= @doctor.specialty&.name %></p>
        <% if @doctor.subspecialty.present? %>
          <p class="text-lg text-gray-600 mb-4">Subespecialidad: <%= @doctor.subspecialty.name %></p>
        <% end %>
        
        <% if @doctor.description.present? %>
          <div class="mb-6">
            <h2 class="text-xl font-semibold mb-2" style="color: #38bdf8;">Sobre el médico</h2>
            <p class="text-gray-700"><%= @doctor.description %></p>
          </div>
        <% end %>
        
        <% if @services.any? %>
          <div class="mb-6">
            <h2 class="text-xl font-semibold mb-2" style="color: #38bdf8;">Servicios</h2>
            <div class="flex flex-wrap gap-2">
              <% @services.each do |service| %>
                <span class="inline-block px-3 py-1 text-sm rounded-full text-white" style="background-color: #38bdf8;"><%= service.name %></span>
              <% end %>
            </div>
          </div>
        <% end %>
        
        <% if @establishments.any? %>
          <div class="mb-6">
            <h2 class="text-xl font-semibold mb-2" style="color: #38bdf8;">Consultorios</h2>
            
            <% @establishments.each do |establishment| %>
              <div class="mb-4 border-l-4 pl-4" style="border-color: #38bdf8;">
                <h3 class="text-lg font-medium" style="color: #38bdf8;"><%= establishment.name %></h3>
                <p class="text-gray-600"><%= establishment.address %></p>
                <% if establishment.phone.present? %>
                  <p class="text-gray-600">Tel: <%= establishment.phone %></p>
                <% end %>
                <% if establishment.map_link.present? %>
                  <a href="<%= establishment.map_link %>" target="_blank" class="text-sm hover:underline" style="color: #38bdf8;">Ver en mapa</a>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="mb-6">
            <h2 class="text-xl font-semibold mb-2" style="color: #38bdf8;">Ubicación</h2>
            <div class="mb-4 border-l-4 pl-4" style="border-color: #38bdf8;">
              <p class="text-gray-600"><%= @doctor.address %></p>
              <p class="text-gray-600"><%= @doctor.city&.name %>, <%= @doctor.department&.name %></p>
            </div>
          </div>
        <% end %>
        

      </div>
    </div>
  </div>
</div>
