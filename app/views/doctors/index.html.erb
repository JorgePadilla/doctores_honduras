<div class="container mx-auto px-4 py-8">
  <header class="text-center mb-12">
    <h1 class="text-4xl font-bold text-primary-700 mb-4">Directorio de Médicos</h1>
    <p class="text-xl text-gray-600">Encuentra el especialista que necesitas en Honduras</p>
  </header>

  <div class="max-w-4xl mx-auto mb-10">
    <div class="bg-white rounded-lg shadow-lg p-6">
      <form action="/doctors" method="get" class="flex flex-col md:flex-row gap-4">
        <div class="flex-grow">
          <input type="text" name="q" placeholder="Busca por Nombre, especialidad o clínica" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500">
        </div>
        <button type="submit" class="btn-primary py-3 px-6 rounded-lg">
          Buscar
        </button>
      </form>
    </div>
  </div>

  <div class="grid md:grid-cols-1 gap-8 max-w-4xl mx-auto">
    <% @doctors.each do |doctor| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="flex flex-col md:flex-row">
          <div class="md:w-1/4 p-4">
            <% if doctor.image_url.present? %>
              <img src="<%= doctor.image_url %>" alt="<%= doctor.name %>" class="w-full h-auto rounded-lg object-cover">
            <% else %>
              <div class="w-full h-full bg-gray-200 rounded-lg flex items-center justify-center">
                <span class="text-gray-500">Sin imagen</span>
              </div>
            <% end %>
          </div>
          <div class="md:w-3/4 p-4">
            <div class="flex flex-col md:flex-row md:justify-between md:items-start">
              <div>
                <h2 class="text-xl font-semibold text-primary-700 mb-2"><%= doctor.name %></h2>
                <p class="text-gray-600 mb-1">Especialista en <%= doctor.specialization %></p>
                <p class="text-gray-500 text-sm mb-3"><%= doctor.medical_license %></p>
              </div>
              
              <% if doctor.establishments.any? %>
                <div class="mb-3 md:text-right">
                  <h3 class="text-lg font-medium text-primary-600"><%= doctor.establishments.first.name %></h3>
                  <p class="text-gray-500 text-sm"><%= doctor.establishments.first.address %></p>
                </div>
              <% end %>
            </div>
            
            <div class="mt-2 text-right">
              <a href="<%= doctor_path(doctor) %>" class="inline-block px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition">
                VER PERFIL COMPLETO
              </a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
    <!-- Pagination controls -->
    <% if @total_pages > 1 %>
      <div class="mt-10 mb-6 flex justify-center">
        <nav class="shadow-sm rounded-lg" aria-label="Pagination">
          <%= pagination_links(@page, @total_pages, { q: params[:q] }) %>
        </nav>
      </div>
    <% end %>
  </div>
</div>
