<div class="container mx-auto px-4 py-8">
  <header class="text-center mb-12">
    <h1 class="text-4xl font-bold text-primary-700 mb-4">Directorio de Médicos</h1>
    <p class="text-xl text-gray-600">Encuentra el especialista que necesitas en Honduras</p>
  </header>

  <!-- Modern Search and Filter Section -->
  <div class="max-w-6xl mx-auto mb-6">
    <div class="bg-white rounded-2xl shadow-lg p-4 transition-all hover:shadow-xl">
      <!-- Search Bar -->
      <div class="mb-4">
        <form action="/doctors" method="get" class="flex items-center bg-gray-50 rounded-xl p-2 transition-all focus-within:bg-white focus-within:ring-2 focus-within:ring-blue-500 focus-within:ring-opacity-20">
          <div class="flex-grow flex items-center">
            <svg class="h-5 w-5 text-gray-400 ml-2 mr-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
            <input type="text" name="q" value="<%= params[:q] %>" placeholder="Busca por nombre, especialidad, ciudad o departamento" class="w-full py-2 bg-transparent text-gray-700 focus:outline-none placeholder-gray-500">
          </div>
          <button type="submit" class="ml-3 py-2 px-5 rounded-xl text-white font-medium transition-all shadow-md hover:shadow-lg transform hover:scale-105" style="background-color: #38bdf8;">
            Buscar
          </button>
        </form>
      </div>

      <!-- Filter Section -->
      <div class="border-t border-gray-200 pt-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
          <svg class="h-5 w-5 mr-2 text-blue-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd" />
          </svg>
          Filtrar Resultados
        </h3>

        <%= form_with url: doctors_path, method: :get, class: "flex flex-col md:flex-row md:items-end gap-3", data: { turbo_frame: "doctors-list", controller: "form", form_target: "filterForm" } do |form| %>
          <% if params[:q].present? %>
            <%= form.hidden_field :q, value: params[:q] %>
          <% end %>

          <div class="flex-1">
            <label for="specialty" class="block text-sm font-medium text-gray-700 mb-1">
              Especialidad
            </label>
            <div class="relative">
              <%= form.select :specialty,
                            options_for_select(@specialties, params[:specialty]),
                            { include_blank: "Todas las especialidades" },
                            class: "w-full pl-3 pr-10 py-2 text-base border border-gray-300 rounded-xl bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all appearance-none",
                            data: { action: "change->form#submit" } %>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-400">
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </div>
            </div>
          </div>

          <div class="flex-1">
            <label for="service" class="block text-sm font-medium text-gray-700 mb-1">
              Servicio
            </label>
            <div class="relative">
              <%= form.select :service,
                            options_for_select(@services, params[:service]),
                            { include_blank: "Todos los servicios" },
                            class: "w-full pl-3 pr-10 py-2 text-base border border-gray-300 rounded-xl bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all appearance-none",
                            data: { action: "change->form#submit" } %>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-400">
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </div>
            </div>
          </div>

          <div class="flex items-end gap-2">
            <% if params[:specialty].present? || params[:service].present? %>
              <%= link_to doctors_path(q: params[:q]),
                         class: "inline-flex justify-center items-center py-2 px-5 border border-gray-300 shadow-md text-sm font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all hover:shadow-lg transform hover:scale-105" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span>Limpiar Filtros</span>
              <% end %>
            <% end %>
          </div>

          <div data-form-target="loadingIndicator" class="hidden mt-2 text-center text-sm text-gray-500">
            <div class="inline-flex items-center">
              <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              <span>Buscando médicos...</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main content -->
  <div class="max-w-6xl mx-auto mb-6">
    <div class="mb-4">
      <h2 class="text-2xl font-bold text-primary-600">Resultados</h2>
    </div>
      <%= turbo_frame_tag "doctors-list" do %>

      <div class="grid md:grid-cols-1 gap-6">
    <% @doctors.each do |doctor| %>
      <div class="bg-white rounded-xl shadow-md overflow-hidden border-l-8 transition-all hover:shadow-lg transform hover:-translate-y-1" style="border-color: #38bdf8;">
        <div class="flex flex-col md:flex-row">
          <!-- Doctor Image -->
          <div class="md:w-1/4 p-4">
            <% if doctor.image.attached? %>
              <%= image_tag doctor.image, alt: doctor.name, class: "w-full h-60 rounded-lg object-contain" %>
            <% else %>
              <div class="w-full h-60 bg-gray-200 rounded-lg flex items-center justify-center">
                <span class="text-gray-500">Sin imagen</span>
              </div>
            <% end %>
          </div>

          <!-- Doctor Information -->
          <div class="md:w-3/4 p-4 flex flex-col">
            <!-- Content Area -->
            <div class="flex-1">
              <!-- First Row: Doctor Details and Location -->
              <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-3">
                <div class="flex-1">
                  <h2 class="text-2xl font-bold mb-1" style="color: #38bdf8;"><%= doctor.name %></h2>
                  <p class="text-lg text-gray-700 mb-1">Especialista en <strong><%= doctor.specialty&.name %></strong></p>
                  <% if doctor.subspecialty.present? %>
                    <p class="text-gray-700 mb-1">Subespecialidad: <strong><%= doctor.subspecialty.name %></strong></p>
                  <% end %>
                  <p class="text-gray-500 text-sm mb-3"><%= doctor.odontologia if doctor.respond_to?(:odontologia) %></p>
                </div>

                <!-- Location/Establishment Info -->
                <div class="mt-3 md:mt-0 md:text-right">
                  <% if doctor.establishments.any? %>
                    <div class="mb-2">
                      <h3 class="text-lg font-medium" style="color: #38bdf8;"><%= doctor.establishments.first.name %></h3>
                      <p class="text-gray-500 text-sm"><%= doctor.establishments.first.address %></p>
                    </div>
                  <% else %>
                    <div class="mb-2">
                      <p class="text-gray-500 text-sm"><%= doctor.city&.name %>, <%= doctor.department&.name %></p>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Second Row: Services Section - Full Width -->
              <% if doctor.services.any? %>
                <div class="mt-4 pt-4 border-t border-gray-200">
                  <h3 class="text-lg font-semibold mb-4" style="color: #38bdf8;">Servicios Destacados</h3>
                  <div class="flex flex-wrap gap-2">
                    <% doctor.services.limit(8).each do |service| %>
                      <span class="inline-block px-3 py-1 text-sm rounded-full text-white shadow-sm transition-all hover:shadow-md" style="background-color: #38bdf8;"><%= service.name %></span>
                    <% end %>
                    <% if doctor.services.count > 8 %>
                      <span class="inline-block px-3 py-1 text-sm rounded-full text-gray-600 bg-gray-200">+<%= doctor.services.count - 8 %> más</span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- View Profile Button - Bottom of Column -->
            <div class="mt-auto pt-4 text-right">
              <%= link_to doctor_path(doctor), data: { turbo_frame: "_top" }, class: "inline-flex items-center px-5 py-2 text-white font-medium rounded-full transition-all shadow-md hover:shadow-lg transform hover:scale-105", style: "background-color: #38bdf8;" do %>
                <span class="text-base">VER PERFIL COMPLETO</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Pagination controls -->
    <% if @total_pages > 1 %>
      <div class="mt-10 mb-6 flex justify-center">
        <nav class="shadow-sm rounded-lg" aria-label="Pagination">
          <%= pagination_links(@page, @total_pages, { q: params[:q], specialty: params[:specialty], service: params[:service] }) %>
        </nav>
      </div>
    <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>