<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-gray-900">Gestión de Suscripciones</h1>
          <span class="ml-2 px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full">Admin</span>
        </div>
        <div class="text-sm text-gray-500">
          <%= Current.user.email %>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex space-x-8 py-4">
        <%= link_to "Dashboard", admin_dashboard_path, class: "text-gray-500 hover:text-gray-700 border-b-2 border-transparent hover:border-gray-300 px-1 py-2 text-sm font-medium" %>
        <%= link_to "Usuarios", admin_users_path, class: "text-gray-500 hover:text-gray-700 border-b-2 border-transparent hover:border-gray-300 px-1 py-2 text-sm font-medium" %>
        <%= link_to "Doctores", admin_doctors_path, class: "text-gray-500 hover:text-gray-700 border-b-2 border-transparent hover:border-gray-300 px-1 py-2 text-sm font-medium" %>
        <%= link_to "Suscripciones", admin_subscriptions_path, class: "text-blue-600 border-b-2 border-blue-600 px-1 py-2 text-sm font-medium" %>
      </nav>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Stats -->
    <div class="mb-6">
      <div class="bg-white shadow rounded-lg p-6">
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-4">
          <div class="text-center">
            <p class="text-sm font-medium text-gray-500">Total Suscripciones</p>
            <p class="text-2xl font-bold text-gray-900"><%= @subscriptions&.count || 0 %></p>
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-500">Activas</p>
            <p class="text-2xl font-bold text-green-600"><%= @subscriptions&.where(status: 'active')&.count || 0 %></p>
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-500">Canceladas</p>
            <p class="text-2xl font-bold text-red-600"><%= @subscriptions&.where(status: 'canceled')&.count || 0 %></p>
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-500">Ingreso Mensual</p>
            <p class="text-2xl font-bold text-purple-600">
              $<%= @subscriptions&.where(status: 'active')&.joins(:subscription_plan)&.sum('subscription_plans.price') || 0 %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Subscriptions Table -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usuario</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Plan</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Inicio</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fin</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Precio</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if @subscriptions.present? %>
                <% @subscriptions.each do |subscription| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                          <span class="text-sm font-medium text-gray-700"><%= subscription.user.email[0].upcase %></span>
                        </div>
                        <div class="ml-4">
                          <div class="text-sm font-medium text-gray-900"><%= subscription.user.email %></div>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= subscription.subscription_plan&.name || 'Sin plan' %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% case subscription.status %>
                      <% when 'active' %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                          Activa
                        </span>
                      <% when 'canceled' %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                          Cancelada
                        </span>
                      <% when 'past_due' %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                          Vencida
                        </span>
                      <% else %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                          <%= subscription.status %>
                        </span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= subscription.current_period_start&.strftime('%d/%m/%Y') || 'N/A' %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= subscription.current_period_end&.strftime('%d/%m/%Y') || 'N/A' %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">
                      $<%= subscription.subscription_plan&.price || '0' %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                    No hay suscripciones registradas
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Plan Management -->
    <div class="mt-6 bg-white shadow rounded-lg">
      <div class="p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Gestión de Planes</h3>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Plan</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Precio</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% SubscriptionPlan.all.each do |plan| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= plan.name %></div>
                    <div class="text-sm text-gray-500"><%= plan.description %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <div class="flex items-center space-x-2">
                      <span id="price-display-<%= plan.id %>">
                        <%= plan.price_in_dollars %> / <%= plan.interval_display %>
                      </span>
                      <button
                        type="button"
                        onclick="togglePriceEdit(<%= plan.id %>, <%= plan.price %>)"
                        class="text-blue-600 hover:text-blue-800 text-xs font-medium"
                      >
                        Editar
                      </button>
                    </div>
                    <div id="price-edit-<%= plan.id %>" class="hidden mt-2">
                      <%= form_with url: admin_update_plan_price_path(plan), method: :patch, class: "flex items-center space-x-2" do |form| %>
                        <div class="flex items-center">
                          <span class="text-sm text-gray-500 mr-1">$</span>
                          <%= form.number_field :price,
                                value: plan.price / 100.0,
                                step: 0.01,
                                min: 0,
                                class: "w-20 px-2 py-1 text-sm border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500" %>
                        </div>
                        <button
                          type="submit"
                          class="px-2 py-1 text-xs bg-blue-600 text-white rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                        >
                          Guardar
                        </button>
                        <button
                          type="button"
                          onclick="togglePriceEdit(<%= plan.id %>, <%= plan.price %>)"
                          class="px-2 py-1 text-xs bg-gray-300 text-gray-700 rounded hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500"
                        >
                          Cancelar
                        </button>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if plan.visible? %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        Visible
                      </span>
                    <% else %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                        Oculto
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= form_with url: admin_toggle_plan_visibility_path(plan), method: :post, class: "inline-flex items-center", data: { turbo: true } do |form| %>
                      <button type="submit" class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 <%= plan.visible? ? 'bg-blue-600' : 'bg-gray-200' %>">
                        <span class="sr-only"><%= plan.visible? ? 'Ocultar' : 'Mostrar' %></span>
                        <span aria-hidden="true" class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out <%= plan.visible? ? 'translate-x-5' : 'translate-x-0' %>"></span>
                      </button>
                      <span class="ml-2 text-sm font-medium text-gray-700">
                        <%= plan.visible? ? 'Visible' : 'Oculto' %>
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Revenue Breakdown -->
    <div class="mt-6 grid grid-cols-1 gap-6 lg:grid-cols-2">
      <!-- Plan Distribution -->
      <div class="bg-white shadow rounded-lg">
        <div class="p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Distribución por Plan</h3>
          <div class="space-y-3">
            <% SubscriptionPlan.all.each do |plan| %>
              <% plan_count = @subscriptions&.where(subscription_plan_id: plan.id, status: 'active')&.count || 0 %>
              <% active_count = @subscriptions&.where(status: 'active')&.count || 1 %>
              <% if plan_count > 0 %>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-600"><%= plan.name %></span>
                  <span class="text-sm font-medium text-gray-900"><%= plan_count %> usuarios</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-blue-600 h-2 rounded-full" style="width: <%= active_count > 0 ? (plan_count.to_f / active_count * 100).round : 0 %>%"></div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Monthly Revenue -->
      <div class="bg-white shadow rounded-lg">
        <div class="p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Ingresos por Plan</h3>
          <div class="space-y-3">
            <% SubscriptionPlan.all.each do |plan| %>
              <% plan_count = @subscriptions&.where(subscription_plan_id: plan.id, status: 'active')&.count || 0 %>
              <% plan_revenue = plan_count * plan.price %>
              <% total_revenue = @subscriptions&.where(status: 'active')&.joins(:subscription_plan)&.sum('subscription_plans.price') || 1 %>
              <% if plan_revenue > 0 %>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-600"><%= plan.name %></span>
                  <span class="text-sm font-medium text-gray-900">$<%= plan_revenue %></span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-green-600 h-2 rounded-full" style="width: <%= total_revenue > 0 ? (plan_revenue.to_f / total_revenue * 100).round : 0 %>%"></div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function togglePriceEdit(planId, currentPrice) {
  const displayElement = document.getElementById(`price-display-${planId}`);
  const editElement = document.getElementById(`price-edit-${planId}`);

  if (displayElement.style.display === 'none') {
    // Switch back to display mode
    displayElement.style.display = 'block';
    editElement.classList.add('hidden');
  } else {
    // Switch to edit mode
    displayElement.style.display = 'none';
    editElement.classList.remove('hidden');

    // Focus on the input field
    const inputField = editElement.querySelector('input[type="number"]');
    if (inputField) {
      inputField.focus();
      inputField.select();
    }
  }
}
</script>