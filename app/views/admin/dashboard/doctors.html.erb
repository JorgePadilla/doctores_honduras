<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-gray-900">Gestión de Doctores</h1>
          <span class="ml-2 px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full">Admin</span>
        </div>
        <div class="text-sm text-gray-500">
          <%= Current.user.email %>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex space-x-8 py-4">
        <%= link_to "Dashboard", admin_dashboard_path, class: "text-gray-500 hover:text-gray-700 border-b-2 border-transparent hover:border-gray-300 px-1 py-2 text-sm font-medium" %>
        <%= link_to "Usuarios", admin_users_path, class: "text-gray-500 hover:text-gray-700 border-b-2 border-transparent hover:border-gray-300 px-1 py-2 text-sm font-medium" %>
        <%= link_to "Doctores", admin_doctors_path, class: "text-blue-600 border-b-2 border-blue-600 px-1 py-2 text-sm font-medium" %>
        <%= link_to "Suscripciones", admin_subscriptions_path, class: "text-gray-500 hover:text-gray-700 border-b-2 border-transparent hover:border-gray-300 px-1 py-2 text-sm font-medium" %>
      </nav>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Stats -->
    <div class="mb-6">
      <div class="bg-white shadow rounded-lg p-6">
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-4">
          <div class="text-center">
            <p class="text-sm font-medium text-gray-500">Total Doctores</p>
            <p class="text-2xl font-bold text-gray-900"><%= @doctors&.count || 0 %></p>
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-500">Perfiles Activos</p>
            <p class="text-2xl font-bold text-green-600"><%= @doctors&.where(hidden: false)&.count || 0 %></p>
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-500">Perfiles Ocultos</p>
            <p class="text-2xl font-bold text-yellow-600"><%= @doctors&.where(hidden: true)&.count || 0 %></p>
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-500">Con Imagen</p>
            <p class="text-2xl font-bold text-blue-600"><%= @doctors&.joins("INNER JOIN active_storage_attachments ON active_storage_attachments.record_id = doctor_profiles.id AND active_storage_attachments.record_type = 'DoctorProfile' AND active_storage_attachments.name = 'image'")&.count || 0 %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Doctors Table -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Doctor</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Especialización</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ubicación</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usuario</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if @doctors.present? %>
                <% @doctors.each do |doctor| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <% if doctor.image_url.present? %>
                          <img src="<%= doctor.image_url %>" alt="<%= doctor.name %>" class="w-10 h-10 rounded-full object-cover" />
                        <% else %>
                          <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
                            <span class="text-sm font-medium text-gray-700"><%= doctor.name[0].upcase %></span>
                          </div>
                        <% end %>
                        <div class="ml-4">
                          <div class="text-sm font-medium text-gray-900"><%= doctor.name %></div>
                          <div class="text-sm text-gray-500"><%= doctor.medical_license %></div>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= doctor.specialty&.name %>
                      <% if doctor.subspecialty.present? %>
                        <br><span class="text-xs text-gray-400"><%= doctor.subspecialty.name %></span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= doctor.city&.name %>, <%= doctor.department&.name %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= doctor.user.email %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if doctor.hidden? %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                          Oculto
                        </span>
                      <% else %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                          Activo
                        </span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= form_with url: admin_toggle_doctor_visibility_path(doctor), method: :post, class: "inline-flex items-center", data: { turbo: true } do |form| %>
                        <button type="submit" class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 <%= doctor.hidden? ? 'bg-gray-200' : 'bg-blue-600' %>">
                          <span class="sr-only"><%= doctor.hidden? ? 'Activar' : 'Desactivar' %></span>
                          <span aria-hidden="true" class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out <%= doctor.hidden? ? 'translate-x-0' : 'translate-x-5' %>"></span>
                        </button>
                        <span class="ml-2 text-sm font-medium text-gray-700">
                          <%= doctor.hidden? ? 'Desactivado' : 'Activado' %>
                        </span>
                      <% end %>
                      <%= link_to "Ver", doctor_path(doctor), class: "ml-4 text-blue-600 hover:text-blue-900", target: "_blank" %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                    No hay doctores registrados
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>