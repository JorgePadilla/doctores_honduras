<div class="min-h-screen bg-gray-50 dark:bg-slate-900">
  <!-- Header -->
  <div class="bg-white dark:bg-slate-800 shadow-sm border-b dark:border-slate-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Panel de Control</h1>
          <span class="ml-2 px-2 py-1 text-xs bg-sky-100 dark:bg-sky-900/30 text-sky-800 dark:text-sky-300 rounded-full">Admin</span>
        </div>
        <div class="text-sm text-gray-500 dark:text-slate-400">
          <%= Current.user.email %>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <div class="bg-white dark:bg-slate-800 shadow-sm border-b dark:border-slate-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex space-x-8 py-4">
        <%= link_to "Dashboard", admin_dashboard_path, class: "text-sky-600 border-b-2 border-sky-500 px-1 py-2 text-sm font-medium" %>
        <%= link_to "Usuarios", admin_users_path, class: "text-gray-500 dark:text-slate-400 hover:text-gray-700 dark:hover:text-slate-200 border-b-2 border-transparent hover:border-gray-300 px-1 py-2 text-sm font-medium" %>
        <%= link_to "Doctores", admin_doctors_path, class: "text-gray-500 dark:text-slate-400 hover:text-gray-700 dark:hover:text-slate-200 border-b-2 border-transparent hover:border-gray-300 px-1 py-2 text-sm font-medium" %>
        <%= link_to "Suscripciones", admin_subscriptions_path, class: "text-gray-500 dark:text-slate-400 hover:text-gray-700 dark:hover:text-slate-200 border-b-2 border-transparent hover:border-gray-300 px-1 py-2 text-sm font-medium" %>
      </nav>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Overview Cards -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4 mb-8">
      <!-- Total Users -->
      <div class="bg-white dark:bg-slate-800 overflow-hidden shadow rounded-lg dark:shadow-slate-900/50">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-sky-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 dark:text-slate-400 truncate">Total Usuarios</dt>
                <dd class="text-lg font-medium text-gray-900 dark:text-white"><%= @users_count %></dd>
                <dt class="text-xs text-gray-500 dark:text-slate-400">
                  <span class="text-green-600">+<%= @new_users_this_week %></span> esta semana
                </dt>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Doctors -->
      <div class="bg-white dark:bg-slate-800 overflow-hidden shadow rounded-lg dark:shadow-slate-900/50">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 dark:text-slate-400 truncate">Total Doctores</dt>
                <dd class="text-lg font-medium text-gray-900 dark:text-white"><%= @doctors_count %></dd>
                <dt class="text-xs text-gray-500 dark:text-slate-400">
                  <span class="text-green-600">+<%= @new_doctors_this_week %></span> esta semana
                </dt>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Active Subscriptions -->
      <div class="bg-white dark:bg-slate-800 overflow-hidden shadow rounded-lg dark:shadow-slate-900/50">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21l-7-5-7 5V5a2 2 0 012-2h10a2 2 0 012 2v16z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 dark:text-slate-400 truncate">Suscripciones Activas</dt>
                <dd class="text-lg font-medium text-gray-900 dark:text-white"><%= @active_subscriptions %></dd>
                <dt class="text-xs text-gray-500 dark:text-slate-400">
                  Ingreso mensual: $<%= @monthly_revenue %>
                </dt>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Profile Quality -->
      <div class="bg-white dark:bg-slate-800 overflow-hidden shadow rounded-lg dark:shadow-slate-900/50">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 dark:text-slate-400 truncate">Perfiles con Imagen</dt>
                <dd class="text-lg font-medium text-gray-900 dark:text-white"><%= @completion_rate %>%</dd>
                <dt class="text-xs text-gray-500 dark:text-slate-400">
                  <%= @doctors_with_images %>/<%= @doctors_count %> con imagen
                </dt>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions and Alerts -->
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3 mb-8">
      <!-- Quick Actions -->
      <div class="lg:col-span-2 bg-white dark:bg-slate-800 shadow rounded-lg dark:shadow-slate-900/50">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white mb-4">Acciones Rapidas</h3>
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div class="bg-sky-50 dark:bg-sky-900/20 border border-sky-200 dark:border-sky-800 rounded-lg p-4 hover:bg-sky-100 dark:hover:bg-sky-900/30 transition-colors">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-sky-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                  </svg>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-medium text-sky-800 dark:text-sky-300">Gestionar Doctores</h4>
                  <p class="text-xs text-sky-600 dark:text-sky-400">Activar/desactivar perfiles</p>
                </div>
              </div>
              <%= link_to "Ir a Doctores", admin_doctors_path, class: "mt-3 inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-sky-700 dark:text-sky-300 bg-sky-100 dark:bg-sky-900/40 hover:bg-sky-200 dark:hover:bg-sky-900/60" %>
            </div>

            <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4 hover:bg-green-100 dark:hover:bg-green-900/30 transition-colors">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-medium text-green-800 dark:text-green-300">Ver Usuarios</h4>
                  <p class="text-xs text-green-600 dark:text-green-400">Gestionar cuentas de usuario</p>
                </div>
              </div>
              <%= link_to "Ir a Usuarios", admin_users_path, class: "mt-3 inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-green-700 dark:text-green-300 bg-green-100 dark:bg-green-900/40 hover:bg-green-200 dark:hover:bg-green-900/60" %>
            </div>

            <div class="bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 rounded-lg p-4 hover:bg-purple-100 dark:hover:bg-purple-900/30 transition-colors">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-purple-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21l-7-5-7 5V5a2 2 0 012-2h10a2 2 0 012 2v16z"></path>
                  </svg>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-medium text-purple-800 dark:text-purple-300">Suscripciones</h4>
                  <p class="text-xs text-purple-600 dark:text-purple-400">Ver estado de suscripciones</p>
                </div>
              </div>
              <%= link_to "Ir a Suscripciones", admin_subscriptions_path, class: "mt-3 inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-purple-700 dark:text-purple-300 bg-purple-100 dark:bg-purple-900/40 hover:bg-purple-200 dark:hover:bg-purple-900/60" %>
            </div>

            <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4 hover:bg-yellow-100 dark:hover:bg-yellow-900/30 transition-colors">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-yellow-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-medium text-yellow-800 dark:text-yellow-300">Estadisticas</h4>
                  <p class="text-xs text-yellow-600 dark:text-yellow-400">Ver crecimiento y metricas</p>
                </div>
              </div>
              <%= link_to "Ver Estadisticas", admin_dashboard_path, class: "mt-3 inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-yellow-700 dark:text-yellow-300 bg-yellow-100 dark:bg-yellow-900/40 hover:bg-yellow-200 dark:hover:bg-yellow-900/60" %>
            </div>
          </div>
        </div>
      </div>

      <!-- System Status -->
      <div class="bg-white dark:bg-slate-800 shadow rounded-lg dark:shadow-slate-900/50">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white mb-4">Estado del Sistema</h3>
          <div class="space-y-4">
            <% active_pct = @doctors_count > 0 ? [((@doctors_count - @hidden_profiles).to_f / @doctors_count * 100).round, 100].min : 0 %>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-600 dark:text-slate-400">Perfiles Activos</span>
              <span class="text-sm font-medium text-green-600"><%= @doctors_count - @hidden_profiles %>/<%= @doctors_count %></span>
            </div>
            <div class="w-full bg-gray-200 dark:bg-slate-600 rounded-full h-2">
              <div class="bg-green-500 h-2 rounded-full" style="width: <%= active_pct %>%"></div>
            </div>

            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-600 dark:text-slate-400">Perfiles Completos</span>
              <span class="text-sm font-medium text-sky-600"><%= @completion_rate %>%</span>
            </div>
            <div class="w-full bg-gray-200 dark:bg-slate-600 rounded-full h-2">
              <div class="bg-sky-500 h-2 rounded-full" style="width: <%= @completion_rate %>%"></div>
            </div>

            <% subs_pct = @users_count > 0 ? [(@active_subscriptions.to_f / @users_count * 100).round, 100].min : 0 %>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-600 dark:text-slate-400">Suscripciones Activas</span>
              <span class="text-sm font-medium text-purple-600"><%= @active_subscriptions %></span>
            </div>
            <div class="w-full bg-gray-200 dark:bg-slate-600 rounded-full h-2">
              <div class="bg-purple-500 h-2 rounded-full" style="width: <%= subs_pct %>%"></div>
            </div>
          </div>

          <% if @hidden_profiles > 0 || @incomplete_profiles > 0 %>
            <div class="mt-4 p-3 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg">
              <div class="flex items-center">
                <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
                <div class="ml-2">
                  <p class="text-sm font-medium text-yellow-800 dark:text-yellow-300">Acciones Pendientes</p>
                  <p class="text-xs text-yellow-600 dark:text-yellow-400">
                    <% if @hidden_profiles > 0 %><%= @hidden_profiles %> perfiles ocultos<% end %>
                    <% if @incomplete_profiles > 0 %><% if @hidden_profiles > 0 %> y <% end %><%= @incomplete_profiles %> incompletos<% end %>
                  </p>
                </div>
              </div>
            </div>
          <% else %>
            <div class="mt-4 p-3 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
              <div class="flex items-center">
                <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div class="ml-2">
                  <p class="text-sm font-medium text-green-800 dark:text-green-300">Todo en orden</p>
                  <p class="text-xs text-green-600 dark:text-green-400">No hay acciones pendientes</p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
      <!-- Recent Users -->
      <div class="bg-white dark:bg-slate-800 shadow rounded-lg dark:shadow-slate-900/50">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white mb-4">Usuarios Recientes</h3>
          <div class="space-y-3">
            <% @recent_users.each do |user| %>
              <div class="flex items-center justify-between py-2 border-b border-gray-100 dark:border-slate-700">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-gray-300 dark:bg-slate-600 rounded-full flex items-center justify-center">
                    <span class="text-sm font-medium text-gray-700 dark:text-slate-300"><%= user.email[0].upcase %></span>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900 dark:text-white"><%= user.email %></p>
                    <p class="text-xs text-gray-500 dark:text-slate-400">Registrado: <%= time_ago_in_words(user.created_at) %> atras</p>
                  </div>
                </div>
                <% if user.admin? %>
                  <span class="px-2 py-1 text-xs bg-sky-100 dark:bg-sky-900/30 text-sky-800 dark:text-sky-300 rounded-full">Admin</span>
                <% end %>
              </div>
            <% end %>
          </div>
          <div class="mt-4">
            <%= link_to "Ver todos los usuarios", admin_users_path, class: "text-sm text-sky-600 dark:text-sky-400 hover:text-sky-500 dark:hover:text-sky-300" %>
          </div>
        </div>
      </div>

      <!-- Recent Doctors -->
      <div class="bg-white dark:bg-slate-800 shadow rounded-lg dark:shadow-slate-900/50">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white mb-4">Doctores Recientes</h3>
          <div class="space-y-3">
            <% @recent_doctors.each do |doctor| %>
              <div class="flex items-center justify-between py-2 border-b border-gray-100 dark:border-slate-700">
                <div class="flex items-center">
                  <% if doctor.image_url.present? %>
                    <%= image_tag doctor.image_url, class: "w-8 h-8 rounded-full object-cover" %>
                  <% else %>
                    <div class="w-8 h-8 bg-gray-300 dark:bg-slate-600 rounded-full flex items-center justify-center">
                      <span class="text-sm font-medium text-gray-700 dark:text-slate-300"><%= doctor.name[0].upcase %></span>
                    </div>
                  <% end %>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900 dark:text-white"><%= doctor.name %></p>
                    <p class="text-xs text-gray-500 dark:text-slate-400"><%= doctor.specialty&.name %></p>
                  </div>
                </div>
                <% if doctor.hidden? %>
                  <span class="px-2 py-1 text-xs bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300 rounded-full">Oculto</span>
                <% end %>
              </div>
            <% end %>
          </div>
          <div class="mt-4">
            <%= link_to "Ver todos los doctores", admin_doctors_path, class: "text-sm text-sky-600 dark:text-sky-400 hover:text-sky-500 dark:hover:text-sky-300" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
