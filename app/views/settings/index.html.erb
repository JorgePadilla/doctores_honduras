<div class="max-w-6xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-primary-700 mb-6">Configuración</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <!-- Sidebar Navigation -->
    <div class="bg-white rounded-lg shadow-md p-4">
      <nav class="space-y-1">
        <a href="<%= settings_path %>" class="block px-3 py-2 rounded-md bg-primary-100 text-primary-700 font-medium">
          <i class="fas fa-cog mr-2"></i>General
        </a>
        <a href="<%= settings_account_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-user mr-2"></i>Cuenta
        </a>
        <a href="<%= settings_subscription_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-credit-card mr-2"></i>Suscripción
        </a>
        <a href="<%= settings_notifications_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-bell mr-2"></i>Notificaciones
        </a>
        <a href="<%= settings_security_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-shield-alt mr-2"></i>Seguridad
        </a>
        <a href="<%= settings_language_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-language mr-2"></i>Idioma
        </a>
      </nav>
    </div>
    
    <!-- Main Content -->
    <div class="md:col-span-3 bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-4">Resumen de Configuración</h2>
      
      <div class="space-y-6">
        <div class="border-b pb-4">
          <h3 class="text-lg font-medium mb-2">Cuenta</h3>
          <p class="text-gray-600">Email: <%= @user.email %></p>
          <div class="mt-2">
            <a href="<%= settings_account_path %>" class="text-primary-600 hover:text-primary-800">Administrar cuenta</a>
          </div>
        </div>
        
        <div class="border-b pb-4">
          <h3 class="text-lg font-medium mb-2">Suscripción</h3>
          <% if @subscription && @subscription.active? %>
            <p class="text-gray-600">Plan actual: <%= @user.subscription_plan_name %></p>
            <p class="text-gray-600">Estado: Activo</p>
          <% else %>
            <p class="text-gray-600">Plan actual: Gratuito</p>
          <% end %>
          <div class="mt-2">
            <a href="<%= settings_subscription_path %>" class="text-primary-600 hover:text-primary-800">Administrar suscripción</a>
          </div>
        </div>
        
        <div class="border-b pb-4">
          <h3 class="text-lg font-medium mb-2">Seguridad</h3>
          <p class="text-gray-600">Última actualización: <%= @user.updated_at.strftime("%d/%m/%Y") %></p>
          <div class="mt-2">
            <a href="<%= settings_security_path %>" class="text-primary-600 hover:text-primary-800">Administrar seguridad</a>
          </div>
        </div>
        
        <div>
          <h3 class="text-lg font-medium mb-2">Idioma</h3>
          <p class="text-gray-600">Idioma actual: <%= @user.language == 'es' ? 'Español' : 'English' %></p>
          <div class="mt-2">
            <a href="<%= settings_language_path %>" class="text-primary-600 hover:text-primary-800">Cambiar idioma</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
