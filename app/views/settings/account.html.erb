<div class="max-w-6xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-primary-700 mb-6">Configuración</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <!-- Sidebar Navigation -->
    <div class="bg-white rounded-lg shadow-md p-4">
      <nav class="space-y-1">
        <a href="<%= settings_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-cog mr-2"></i>General
        </a>
        <a href="<%= settings_account_path %>" class="block px-3 py-2 rounded-md bg-blue-100 text-blue-700 font-medium">
          <i class="fas fa-user mr-2"></i>Cuenta
        </a>
        <a href="<%= settings_subscription_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-credit-card mr-2"></i>Suscripción
        </a>
        <a href="<%= settings_notifications_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-bell mr-2"></i>Notificaciones
        </a>
        <a href="<%= settings_security_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-shield-alt mr-2"></i>Seguridad
        </a>
        <a href="<%= settings_language_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-language mr-2"></i>Idioma
        </a>
      </nav>
    </div>
    
    <!-- Main Content -->
    <div class="md:col-span-3 bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-4">Información de Cuenta</h2>
      
      <%= form_with model: @user, url: settings_account_path, method: :patch, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :email, "Correo Electrónico", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email, class: "shadow-sm focus:ring-primary-500 focus:border-primary-500 block w-full sm:text-sm border-gray-300 rounded-md", disabled: true %>
            <p class="mt-1 text-sm text-gray-500">Para cambiar tu correo electrónico, contacta a soporte.</p>
          </div>
        </div>
        
        <div class="pt-5 border-t border-gray-200">
          <h3 class="text-lg font-medium mb-3">Información de Perfil</h3>
          
          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= f.label :name, "Nombre Completo", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :name, class: "shadow-sm focus:ring-primary-500 focus:border-primary-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>
            
            <div class="sm:col-span-3">
              <%= f.label :phone, "Teléfono", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.telephone_field :phone, class: "shadow-sm focus:ring-primary-500 focus:border-primary-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>
            
            <div class="sm:col-span-6">
              <%= f.label :address, "Dirección", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :address, class: "shadow-sm focus:ring-primary-500 focus:border-primary-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="flex justify-end">
          <%= f.submit "Guardar Cambios", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
