<div class="max-w-6xl mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold text-primary-700 dark:text-sky-400 mb-6">Configuración</h1>

  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <%= render "settings/sidebar", current: "account" %>

    <!-- Main Content -->
    <div class="md:col-span-3 bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 p-6 border-l-4 border-l-sky-300 dark:border-l-sky-500">
      <h2 class="text-xl font-semibold mb-4 dark:text-white">Información de Cuenta</h2>

      <%= form_with model: @user, url: settings_account_path, method: :patch, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :email, "Correo Electrónico", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
          <div class="mt-1">
            <%= f.email_field :email, class: "shadow-sm focus:ring-sky-500 focus:border-sky-500 block w-full sm:text-sm border-gray-300 dark:border-slate-600 rounded-md dark:bg-slate-700 dark:text-white", disabled: true %>
            <p class="mt-1 text-sm text-gray-500 dark:text-slate-400">Para cambiar tu correo electrónico, contacta a soporte.</p>
          </div>
        </div>

        <div class="pt-5 border-t border-gray-200 dark:border-slate-700">
          <h3 class="text-lg font-medium mb-3 dark:text-white">Información de Perfil</h3>

          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-3">
              <%= f.label :name, "Nombre Completo", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
              <div class="mt-1">
                <%= f.text_field :name, class: "shadow-sm focus:ring-sky-500 focus:border-sky-500 block w-full sm:text-sm border-gray-300 dark:border-slate-600 rounded-md dark:bg-slate-700 dark:text-white" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= f.label :phone, "Teléfono", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
              <div class="mt-1">
                <%= f.telephone_field :phone, class: "shadow-sm focus:ring-sky-500 focus:border-sky-500 block w-full sm:text-sm border-gray-300 dark:border-slate-600 rounded-md dark:bg-slate-700 dark:text-white" %>
              </div>
            </div>

            <div class="sm:col-span-6">
              <%= f.label :address, "Dirección", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
              <div class="mt-1">
                <%= f.text_field :address, class: "shadow-sm focus:ring-sky-500 focus:border-sky-500 block w-full sm:text-sm border-gray-300 dark:border-slate-600 rounded-md dark:bg-slate-700 dark:text-white" %>
              </div>
            </div>
          </div>
        </div>

        <div class="flex justify-end">
          <%= f.submit "Guardar Cambios", class: "ml-3 inline-flex justify-center py-2 px-5 border border-transparent shadow-sm text-sm font-medium rounded-full text-white transition-all hover:shadow-md transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 bg-sky-500 hover:bg-sky-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
