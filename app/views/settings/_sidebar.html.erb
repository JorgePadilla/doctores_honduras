<div class="bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 p-4 border-l-4 border-l-sky-300 dark:border-l-sky-500">
  <nav class="space-y-1">
    <%
      items = [
        { path: settings_path, icon: "fa-cog", label: "General", key: "general" },
        { path: settings_account_path, icon: "fa-user", label: "Cuenta", key: "account" },
        { path: settings_subscription_path, icon: "fa-credit-card", label: "SuscripciÃ³n", key: "subscription" },
        { path: settings_notifications_path, icon: "fa-bell", label: "Notificaciones", key: "notifications" },
        { path: settings_security_path, icon: "fa-shield-alt", label: "Seguridad", key: "security" },
        { path: settings_language_path, icon: "fa-language", label: "Idioma", key: "language" },
      ]
    %>
    <% items.each do |item| %>
      <% if item[:key] == local_assigns[:current] %>
        <a href="<%= item[:path] %>" class="block px-3 py-2 rounded-md bg-sky-100 dark:bg-sky-900/30 text-sky-700 dark:text-sky-400 font-medium">
          <i class="fas <%= item[:icon] %> mr-2"></i><%= item[:label] %>
        </a>
      <% else %>
        <a href="<%= item[:path] %>" class="block px-3 py-2 rounded-md text-gray-700 dark:text-slate-300 hover:bg-gray-50 dark:hover:bg-slate-700 hover:text-gray-900 dark:hover:text-white">
          <i class="fas <%= item[:icon] %> mr-2"></i><%= item[:label] %>
        </a>
      <% end %>
    <% end %>
  </nav>
</div>
