<div class="max-w-6xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-primary-700 mb-6">Configuración</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <!-- Sidebar Navigation -->
    <div class="bg-white rounded-lg shadow-md p-4">
      <nav class="space-y-1">
        <a href="<%= settings_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-cog mr-2"></i>General
        </a>
        <a href="<%= settings_account_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-user mr-2"></i>Cuenta
        </a>
        <a href="<%= settings_subscription_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-credit-card mr-2"></i>Suscripción
        </a>
        <a href="<%= settings_notifications_path %>" class="block px-3 py-2 rounded-md bg-primary-100 text-primary-700 font-medium">
          <i class="fas fa-bell mr-2"></i>Notificaciones
        </a>
        <a href="<%= settings_security_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-shield-alt mr-2"></i>Seguridad
        </a>
        <a href="<%= settings_language_path %>" class="block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50 hover:text-gray-900">
          <i class="fas fa-language mr-2"></i>Idioma
        </a>
      </nav>
    </div>
    
    <!-- Main Content -->
    <div class="md:col-span-3 bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-4">Preferencias de Notificaciones</h2>
      
      <%= form_with model: @notification_preferences, url: settings_notifications_path, method: :patch, class: "space-y-6" do |f| %>
        <div class="space-y-4">
          <div class="flex items-start">
            <div class="flex items-center h-5">
              <%= f.check_box :email_notifications, class: "focus:ring-primary-500 h-4 w-4 text-primary-600 border-gray-300 rounded" %>
            </div>
            <div class="ml-3 text-sm">
              <%= f.label :email_notifications, "Notificaciones por correo electrónico", class: "font-medium text-gray-700" %>
              <p class="text-gray-500">Recibe notificaciones importantes por correo electrónico.</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="flex items-center h-5">
              <%= f.check_box :marketing_emails, class: "focus:ring-primary-500 h-4 w-4 text-primary-600 border-gray-300 rounded" %>
            </div>
            <div class="ml-3 text-sm">
              <%= f.label :marketing_emails, "Correos de marketing", class: "font-medium text-gray-700" %>
              <p class="text-gray-500">Recibe información sobre promociones y ofertas especiales.</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="flex items-center h-5">
              <%= f.check_box :new_features_notifications, class: "focus:ring-primary-500 h-4 w-4 text-primary-600 border-gray-300 rounded" %>
            </div>
            <div class="ml-3 text-sm">
              <%= f.label :new_features_notifications, "Notificaciones de nuevas características", class: "font-medium text-gray-700" %>
              <p class="text-gray-500">Recibe notificaciones cuando se añadan nuevas características a la plataforma.</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="flex items-center h-5">
              <%= f.check_box :security_alerts, class: "focus:ring-primary-500 h-4 w-4 text-primary-600 border-gray-300 rounded" %>
            </div>
            <div class="ml-3 text-sm">
              <%= f.label :security_alerts, "Alertas de seguridad", class: "font-medium text-gray-700" %>
              <p class="text-gray-500">Recibe alertas importantes relacionadas con la seguridad de tu cuenta.</p>
            </div>
          </div>
        </div>
        
        <div class="flex justify-end">
          <%= f.submit "Guardar Preferencias", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
