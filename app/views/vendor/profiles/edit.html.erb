<div class="container mx-auto px-4 py-8 max-w-3xl">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Editar Perfil de Proveedor</h1>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden border border-gray-200">
    <div class="p-6">
      <%= form_with model: @supplier, url: vendor_profile_path, method: :patch, class: "space-y-6" do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :name, "Nombre de la empresa", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm", required: true %>
          </div>
          <div>
            <%= f.label :phone, "Tel\u00E9fono", class: "block text-sm font-medium text-gray-700" %>
            <%= f.telephone_field :phone, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm", required: true %>
          </div>
          <div>
            <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
          </div>
          <div>
            <%= f.label :website, "Sitio web", class: "block text-sm font-medium text-gray-700" %>
            <%= f.url_field :website, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
          </div>
          <div>
            <%= f.label :category, "Categor\u00EDa", class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :category,
                        options_for_select([
                          ["Equipos M\u00E9dicos", "equipos_medicos"],
                          ["Suministros M\u00E9dicos", "suministros_medicos"],
                          ["Farmac\u00E9uticos", "farmaceuticos"],
                          ["Tecnolog\u00EDa M\u00E9dica", "tecnologia_medica"],
                          ["Mobiliario Hospitalario", "mobiliario_hospitalario"],
                          ["Otro", "otro"]
                        ], @supplier.category),
                        { include_blank: "Selecciona una categor\u00EDa" },
                        { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" } %>
          </div>
          <div>
            <%= f.label :address, "Direcci\u00F3n", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :address, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
          </div>
          <div>
            <%= f.label :department_id, "Departamento", class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :department_id,
                        options_for_select(@departments.map { |d| [d.name, d.id] }, @supplier.department_id),
                        { include_blank: "Selecciona un departamento" },
                        { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" } %>
          </div>
          <div>
            <%= f.label :city_id, "Ciudad", class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :city_id,
                        options_for_select(@cities.map { |c| [c.name, c.id] }, @supplier.city_id),
                        { include_blank: "Selecciona una ciudad" },
                        { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" } %>
          </div>
        </div>

        <div>
          <%= f.label :description, "Descripci\u00F3n", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :description, rows: 4, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
        </div>

        <% if @supplier.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <ul class="text-sm text-red-600 list-disc list-inside">
              <% @supplier.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="flex justify-between">
          <%= link_to "Cancelar", vendor_profile_path, class: "py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <%= f.submit "Guardar Cambios", class: "py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-500 hover:bg-sky-600 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
