<%= form_with model: product, url: url, method: method, class: "space-y-6" do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :name, "Nombre del producto", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm", required: true %>
    </div>
    <div>
      <%= f.label :sku, "SKU", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :sku, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm", required: true %>
    </div>
    <div>
      <%= f.label :category, "Categor\u00EDa", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :category,
                  options_for_select([
                    "Cuidado del Diab\u00E9tico",
                    "Cuidado en Casa",
                    "Equipo Diagn\u00F3stico",
                    "Rehabilitaci\u00F3n",
                    "Fisioterapia",
                    "Movilidad",
                    "Terapia para Varices",
                    "Terapia Respiratoria"
                  ], product.category),
                  { include_blank: "Selecciona una categor\u00EDa" },
                  { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm", required: true } %>
    </div>
    <div>
      <%= f.label :price, "Precio (USD)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :price, step: 0.01, min: 0, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :image_url, "URL de imagen", class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :image_url, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
    </div>
    <div class="flex items-center space-x-6 pt-6">
      <label class="flex items-center">
        <%= f.check_box :active, class: "h-4 w-4 text-sky-600 focus:ring-sky-500 border-gray-300 rounded" %>
        <span class="ml-2 text-sm text-gray-700">Activo</span>
      </label>
    </div>
  </div>

  <div>
    <%= f.label :description, "Descripci\u00F3n", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 3, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
  </div>

  <% if product.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <ul class="text-sm text-red-600 list-disc list-inside">
        <% product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex justify-between">
    <%= link_to "Cancelar", vendor_products_path, class: "py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit class: "py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-500 hover:bg-sky-600 cursor-pointer" %>
  </div>
<% end %>
