<%= form_with model: product, url: url, method: method, class: "space-y-6" do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :name, "Nombre del producto", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
      <%= f.text_field :name, class: "mt-1 block w-full border border-gray-300 dark:bg-slate-700 dark:border-slate-600 dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm", required: true %>
    </div>
    <div>
      <%= f.label :sku, "SKU", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
      <%= f.text_field :sku, class: "mt-1 block w-full border border-gray-300 dark:bg-slate-700 dark:border-slate-600 dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm", required: true %>
    </div>
    <div>
      <%= f.label :category, "Categoría", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
      <%= f.select :category,
                  options_for_select([
                    "Cuidado del Diabético",
                    "Cuidado en Casa",
                    "Equipo Diagnóstico",
                    "Rehabilitación",
                    "Fisioterapia",
                    "Movilidad",
                    "Terapia para Varices",
                    "Terapia Respiratoria"
                  ], product.category),
                  { include_blank: "Selecciona una categoría" },
                  { class: "mt-1 block w-full border border-gray-300 dark:bg-slate-700 dark:border-slate-600 dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm", required: true } %>
    </div>
    <div>
      <%= f.label :price, "Precio (USD)", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
      <%= f.number_field :price, step: 0.01, min: 0, class: "mt-1 block w-full border border-gray-300 dark:bg-slate-700 dark:border-slate-600 dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :image_url, "URL de imagen", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
      <%= f.url_field :image_url, class: "mt-1 block w-full border border-gray-300 dark:bg-slate-700 dark:border-slate-600 dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
    </div>
    <div class="flex items-center space-x-6 pt-6">
      <label class="flex items-center">
        <%= f.check_box :active, class: "h-4 w-4 text-sky-600 focus:ring-sky-500 border-gray-300 rounded" %>
        <span class="ml-2 text-sm text-gray-700 dark:text-slate-300">Activo</span>
      </label>
    </div>
  </div>

  <div>
    <%= f.label :description, "Descripción", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
    <%= f.text_area :description, rows: 3, class: "mt-1 block w-full border border-gray-300 dark:bg-slate-700 dark:border-slate-600 dark:text-white rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
  </div>

  <% if product.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-md p-4">
      <ul class="text-sm text-red-600 dark:text-red-300 list-disc list-inside">
        <% product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex justify-between">
    <%= link_to "Cancelar", vendor_products_path, class: "py-2 px-4 border border-gray-300 dark:border-slate-600 rounded-full transition-all hover:shadow-md transform hover:scale-105 shadow-sm text-sm font-medium text-gray-700 dark:text-slate-300 bg-white dark:bg-slate-700 hover:bg-gray-50 dark:hover:bg-slate-600" %>
    <%= f.submit class: "py-2 px-4 border border-transparent rounded-full transition-all hover:shadow-md transform hover:scale-105 shadow-sm text-sm font-medium text-white bg-sky-500 hover:bg-sky-600 cursor-pointer" %>
  </div>
<% end %>
