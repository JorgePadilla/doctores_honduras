<div class="container mx-auto px-4 py-8 max-w-3xl">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Detalle del Contacto</h1>
    <%= link_to "Volver", vendor_leads_path, class: "text-sky-600 hover:text-sky-800 text-sm" %>
  </div>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden border border-gray-200">
    <div class="p-6 space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <p class="text-sm text-gray-500">Nombre</p>
          <p class="font-medium text-gray-800"><%= @lead.name %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Email</p>
          <p class="font-medium text-gray-800"><%= @lead.email %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Tel&eacute;fono</p>
          <p class="font-medium text-gray-800"><%= @lead.phone || "No proporcionado" %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Organizaci&oacute;n</p>
          <p class="font-medium text-gray-800"><%= @lead.organization || "No proporcionada" %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Fecha</p>
          <p class="font-medium text-gray-800"><%= @lead.created_at.strftime("%d/%m/%Y %H:%M") %></p>
        </div>
      </div>

      <% if @lead.message.present? %>
        <div>
          <p class="text-sm text-gray-500">Mensaje</p>
          <p class="text-gray-800 mt-1 bg-gray-50 p-3 rounded"><%= @lead.message %></p>
        </div>
      <% end %>

      <div class="border-t pt-4">
        <p class="text-sm text-gray-500 mb-2">Actualizar estado</p>
        <%= form_with model: @lead, url: vendor_lead_path(@lead), method: :patch, class: "flex items-center space-x-3" do |f| %>
          <%= f.select :status,
                      options_for_select([["Nuevo", "new"], ["Contactado", "contacted"], ["Convertido", "converted"]], @lead.status),
                      {},
                      { class: "border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" } %>
          <%= f.submit "Actualizar", class: "py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-500 hover:bg-sky-600 cursor-pointer" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
