<div class="max-w-md mx-auto my-12 bg-white dark:bg-slate-800 p-8 rounded-xl shadow-md dark:shadow-slate-900/50 border border-transparent dark:border-slate-700">
  <h1 class="text-2xl font-bold mb-6 text-center text-sky-800 dark:text-sky-400">Iniciar Sesión</h1>

  <%= form_with url: session_url, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1" %>
      <%= form.email_field :email, required: true, autofocus: true, autocomplete: "username", placeholder: "tu@email.com", value: params[:email], class: "form-input" %>
    </div>

    <div>
      <%= form.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1" %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Tu contraseña", class: "form-input" %>
    </div>

    <div>
      <%= form.submit "Iniciar Sesión", class: "w-full bg-sky-500 hover:bg-sky-600 text-white py-2 px-4 rounded-full transition-all hover:shadow-md transform hover:scale-105 focus:outline-none" %>
    </div>

    <div class="flex justify-between items-center text-sm">
      <%= link_to "¿Olvidaste tu contraseña?", new_password_path, class: "text-sky-600 dark:text-sky-400 hover:underline" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600 dark:text-slate-400">
      ¿No tienes una cuenta?
      <%= link_to "Regístrate", signup_path, class: "font-medium text-sky-600 dark:text-sky-400 hover:underline" %>
    </p>
  </div>
</div>
