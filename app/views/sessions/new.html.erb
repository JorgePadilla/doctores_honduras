<div class="max-w-md mx-auto my-12 bg-white p-8 rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold mb-6 text-center" style="color: #0369a1;">Iniciar Sesión</h1>

  <%= form_with url: session_url, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.email_field :email, required: true, autofocus: true, autocomplete: "username", placeholder: "tu@email.com", value: params[:email], class: "form-input" %>
    </div>

    <div>
      <%= form.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Tu contraseña", class: "form-input" %>
    </div>

    <div>
      <%= form.submit "Iniciar Sesión", class: "w-full text-white py-2 px-4 rounded-md focus:outline-none transition duration-150 ease-in-out", style: "background-color: #0284c7;" %>
    </div>
    
    <div class="flex justify-between items-center text-sm">
      <%= link_to "¿Olvidaste tu contraseña?", new_password_path, class: "hover:underline", style: "color: #0284c7;" %>
    </div>
  <% end %>
  
  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      ¿No tienes una cuenta? 
      <%= link_to "Regístrate", signup_path, class: "font-medium hover:underline", style: "color: #0284c7;" %>
    </p>
  </div>
</div>
