<!-- Plan Selection View -->

<div class="container mx-auto px-4 py-8 max-w-5xl">
  <div class="text-center mb-10">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">Seleccione su Plan</h1>
    <p class="text-lg text-gray-600">Elija el plan que mejor se adapte a sus necesidades</p>

  </div>

  <%= form_with url: onboarding_plan_confirmation_path, method: :post, class: "space-y-6", data: { turbo: false } do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
      <% @subscription_plans.each do |plan| %>
        <label class="cursor-pointer">
          <input type="radio" name="plan_id" value="<%= plan.id %>" class="hidden peer" required <%= 'checked' if plan.name == 'Plan Gratuito' %>>
          <div class="bg-gradient-to-br from-gray-100 to-gray-200 rounded-lg shadow-lg overflow-hidden border-2 border-gray-300 hover:border-gray-400 transition-all duration-500 ease-in-out flex flex-col h-full plan-card">
            <div class="p-6 bg-gray-200 border-b border-gray-300 transition-all duration-500 ease-in-out plan-header">
              <h3 class="text-xl font-bold mb-2 text-gray-800 transition-colors duration-500 plan-title"><%= plan.name %></h3>
              <p class="text-2xl font-bold text-gray-700 transition-colors duration-500 plan-price"><%= plan.price_in_dollars %> <span class="text-sm font-normal text-gray-600 transition-colors duration-500 plan-interval">/ <%= plan.interval_display %></span></p>
            </div>
            <div class="p-6 flex-grow bg-gray-50 flex flex-col justify-between transition-all duration-500 ease-in-out plan-content">
              <div>
                <ul class="space-y-3 mb-6">
                  <% plan.features.to_s.split(',').each do |feature| %>
                    <li class="flex items-center">
                      <svg class="h-5 w-5 text-gray-500 mr-2 flex-shrink-0 transition-colors duration-500 feature-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <span class="text-sm text-gray-700 transition-colors duration-500 feature-text"><%= feature.strip %></span>
                    </li>
                  <% end %>
                </ul>
              </div>

              <!-- Plan Description for all plans - aligned to bottom -->
              <div class="mt-auto">
                <div class="bg-gray-100 p-4 rounded-lg border border-gray-200 transition-all duration-500 ease-in-out plan-description">
                  <h4 class="font-medium text-gray-700 mb-2 text-sm transition-colors duration-500 description-title">Descripci√≥n del Plan</h4>
                  <p class="text-sm text-gray-600 transition-colors duration-500 description-text"><%= plan.description %></p>
                </div>
              </div>
            </div>
          </div>
        </label>
      <% end %>
    </div>

    <div class="text-center">
      <%= f.submit "Continuar", class: "py-3 px-8 border border-transparent rounded-md shadow-sm text-lg font-medium text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:bg-gray-400 disabled:cursor-not-allowed", id: "continue-button", disabled: false, style: "background-color: #00bfff;" %>
    </div>
  <% end %>

  <script>
    // Handle both initial load and Turbo navigation
    function initializePlanSelection() {
      console.log('Plan selection script loaded');

      const radioButtons = document.querySelectorAll('input[name="plan_id"]');
      const continueButton = document.getElementById('continue-button');
      const planCards = document.querySelectorAll('label.cursor-pointer > div');

      function updateCardStyles() {
        console.log('Updating card styles');
        planCards.forEach((card, index) => {
          const radio = radioButtons[index];
          const planHeader = card.querySelector('.plan-header');
          const planTitle = card.querySelector('.plan-title');
          const planPrice = card.querySelector('.plan-price');
          const planInterval = card.querySelector('.plan-interval');
          const planContent = card.querySelector('.plan-content');
          const featureIcons = card.querySelectorAll('.feature-icon');
          const featureTexts = card.querySelectorAll('.feature-text');
          const planDescription = card.querySelector('.plan-description');
          const descriptionTitle = card.querySelector('.description-title');
          const descriptionText = card.querySelector('.description-text');

          if (radio.checked) {
            console.log('Selected card:', index);
            // Selected card - enhanced blue styling with zoom animation
            card.classList.add('shadow-2xl', 'scale-105', 'ring-4', 'z-10');
            card.classList.remove('shadow-lg', 'scale-100');

            // Apply menu bar blue gradient and white text to header
            planHeader.style.background = 'linear-gradient(to bottom right, #00bfff, #0099cc)';
            planHeader.style.borderColor = '#00bfff';
            planHeader.classList.remove('bg-gray-200', 'border-gray-300');

            // Apply white text to title and price
            planTitle.classList.add('text-white');
            planTitle.classList.remove('text-gray-800');
            planPrice.classList.add('text-white');
            planPrice.classList.remove('text-gray-700');
            planInterval.style.color = '#e6f7ff';
            planInterval.classList.remove('text-gray-600');

            // Apply light blue background to content
            planContent.style.backgroundColor = '#f0f9ff';
            planContent.classList.remove('bg-gray-50');

            // Apply green checkmark styling to features
            featureIcons.forEach(icon => {
              icon.style.color = '#10b981';
              icon.classList.remove('text-gray-500');
            });
            featureTexts.forEach(text => {
              text.style.color = '#000000';
              text.classList.remove('text-gray-700');
            });

            // Apply white background to description with blue border
            planDescription.style.backgroundColor = '#ffffff';
            planDescription.style.borderColor = '#00bfff';
            planDescription.classList.remove('bg-gray-100', 'border-gray-200');
            descriptionTitle.style.color = '#000000';
            descriptionTitle.classList.add('font-bold');
            descriptionTitle.classList.remove('text-gray-700');
            descriptionText.style.color = '#000000';
            descriptionText.classList.remove('text-gray-600');
          } else {
            // Unselected card - gray theme
            card.classList.remove('shadow-2xl', 'scale-105', 'ring-4', 'z-10');
            card.classList.add('shadow-lg', 'scale-100');

            // Reset to gray styling - clear inline styles
            planHeader.style.background = '';
            planHeader.style.borderColor = '';
            planHeader.classList.add('bg-gray-200', 'border-gray-300');

            planTitle.classList.remove('text-white');
            planTitle.classList.add('text-gray-800');
            planPrice.classList.remove('text-white');
            planPrice.classList.add('text-gray-700');
            planInterval.style.color = '';
            planInterval.classList.add('text-gray-600');

            planContent.style.backgroundColor = '';
            planContent.classList.add('bg-gray-50');

            featureIcons.forEach(icon => {
              icon.style.color = '';
              icon.classList.add('text-gray-500');
            });
            featureTexts.forEach(text => {
              text.style.color = '';
              text.classList.add('text-gray-700');
            });

            planDescription.style.backgroundColor = '';
            planDescription.style.borderColor = '';
            planDescription.classList.add('bg-gray-100', 'border-gray-200');
            descriptionTitle.style.color = '';
            descriptionTitle.classList.remove('font-bold');
            descriptionTitle.classList.add('text-gray-700');
            descriptionText.style.color = '';
            descriptionText.classList.add('text-gray-600');
          }
        });
      }

      radioButtons.forEach((radio, index) => {
        radio.addEventListener('change', function() {
          console.log('Plan changed:', index);
          continueButton.disabled = false;

          // Add smooth zoom and pulse animation to the selected card
          const selectedCard = planCards[index];
          selectedCard.classList.add('animate-pulse');

          // Update all card styles
          updateCardStyles();

          // Remove pulse animation after it completes
          setTimeout(() => {
            selectedCard.classList.remove('animate-pulse');
          }, 800);
        });
      });

      // Initialize card styles immediately
      updateCardStyles();
    }

    // Initialize on DOMContentLoaded
    document.addEventListener('DOMContentLoaded', initializePlanSelection);

    // Re-initialize on Turbo navigation
    document.addEventListener('turbo:load', initializePlanSelection);
  </script>
</div>
