<%= form_with model: doctor_profile, url: onboarding_complete_path, method: :post, class: "space-y-6" do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :name, "Nombre completo", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
      <div class="mt-1 flex gap-2">
        <%= f.select :prefix,
                    options_for_select(DoctorProfile::PREFIXES, doctor_profile.prefix),
                    { include_blank: "TÃ­tulo" },
                    { class: "w-28 border border-gray-300 dark:border-slate-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm dark:bg-slate-700 dark:text-white" } %>
        <%= f.text_field :name, class: "flex-1 border border-gray-300 dark:border-slate-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm dark:bg-slate-700 dark:text-white", placeholder: "Juan P\u00E9rez", required: true %>
    </div>

    <div>
      <%= f.label :specialty_id, "Especialidad", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
      <%= f.select :specialty_id,
                  options_for_select(specialties.map { |s| [s.name, s.id] }, doctor_profile.specialty_id),
                  { include_blank: "Selecciona una especialidad" },
                  { class: "mt-1 block w-full border border-gray-300 dark:border-slate-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm dark:bg-slate-700 dark:text-white" } %>
    </div>

    <div>
      <%= f.label :department_id, "Departamento", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
      <%= f.select :department_id,
                  options_for_select(departments.map { |d| [d.name, d.id] }, doctor_profile.department_id),
                  { include_blank: "Selecciona un departamento" },
                  { class: "mt-1 block w-full border border-gray-300 dark:border-slate-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm dark:bg-slate-700 dark:text-white", required: true } %>
    </div>

    <div>
      <%= f.label :city_id, "Ciudad", class: "block text-sm font-medium text-gray-700 dark:text-slate-300" %>
      <%= f.select :city_id,
                  options_for_select(cities.map { |c| [c.name, c.id] }, doctor_profile.city_id),
                  { include_blank: "Selecciona una ciudad" },
                  { class: "mt-1 block w-full border border-gray-300 dark:border-slate-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm dark:bg-slate-700 dark:text-white", required: true } %>
    </div>
  </div>

  <% if doctor_profile.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-md p-4">
      <ul class="text-sm text-red-600 dark:text-red-300 list-disc list-inside">
        <% doctor_profile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex justify-between">
    <%= link_to "Volver", onboarding_profile_type_path, class: "py-2 px-4 border border-gray-300 dark:border-slate-600 rounded-full transition-all hover:shadow-md transform hover:scale-105 shadow-sm text-sm font-medium text-gray-700 dark:text-slate-300 bg-white dark:bg-slate-700 hover:bg-gray-50 dark:hover:bg-slate-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500" %>
    <%= f.submit "Crear Perfil y Continuar", class: "py-2 px-4 border border-transparent rounded-full transition-all hover:shadow-md transform hover:scale-105 shadow-sm text-sm font-medium text-white bg-sky-500 hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 cursor-pointer" %>
  </div>
<% end %>
