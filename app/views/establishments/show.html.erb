<div class="container mx-auto px-4 py-8">
  <div class="max-w-5xl mx-auto mb-6 flex items-center">
    <a href="/hospitales-y-clinicas" class="inline-flex items-center px-4 py-2 rounded-full text-white font-medium transition-all hover:shadow-md transform hover:scale-105 bg-sky-500 hover:bg-sky-600">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Volver a Hospitales y Clínicas
    </a>
  </div>

  <div class="max-w-5xl mx-auto bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden border border-transparent dark:border-slate-700">
    <!-- Building image banner -->
    <% if @establishment.building_image_url.present? %>
      <div class="w-full h-64 md:h-80 overflow-hidden">
        <img src="<%= @establishment.building_image_url %>" alt="<%= @establishment.name %> edificio" class="w-full h-full object-cover transition-all hover:scale-105">
      </div>
    <% end %>

    <div class="flex flex-col md:flex-row p-6">
      <div class="md:w-1/4 p-4">
        <% if @establishment.logo_url.present? %>
          <img src="<%= @establishment.logo_url %>" alt="<%= @establishment.name %> logo" class="w-full h-auto rounded-lg object-cover shadow-md">
        <% else %>
          <div class="w-full h-48 bg-gray-200 dark:bg-slate-700 rounded-lg flex items-center justify-center shadow-md">
            <span class="text-gray-500 dark:text-slate-400">Sin logo</span>
          </div>
        <% end %>
      </div>

      <div class="md:w-3/4 md:pl-8">
        <h1 class="text-3xl font-bold mb-4 text-sky-600 dark:text-sky-400"><%= @establishment.name %></h1>
        <p class="text-gray-700 dark:text-slate-300 mb-4 text-lg"><%= @establishment.est_type %></p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
          <div>
            <h3 class="text-lg font-medium mb-2 text-sky-600 dark:text-sky-400">Información de Contacto</h3>
            <div class="space-y-2">
              <p class="text-gray-600 dark:text-slate-400"><i class="fas fa-map-marker-alt mr-2"></i><%= @establishment.address %></p>
              <% if @establishment.phone.present? %>
                <p class="text-gray-600 dark:text-slate-400"><i class="fas fa-phone mr-2"></i><%= @establishment.phone %></p>
              <% end %>
              <% if @establishment.map_link.present? %>
                <p class="text-gray-600 dark:text-slate-400">
                  <i class="fas fa-map mr-2"></i>
                  <a href="<%= @establishment.map_link %>" target="_blank" class="text-sky-500 dark:text-sky-400 hover:underline">Ver en Google Maps</a>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Especialidades Section -->
  <div class="max-w-5xl mx-auto mt-8 bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden border border-transparent dark:border-slate-700">
    <div class="flex">
      <div class="w-1/4 p-6 flex items-center justify-center bg-sky-500">
        <h2 class="text-2xl font-bold text-white">Especialidades</h2>
      </div>
      <div class="w-3/4 p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% if @establishment.specialties.any? %>
            <% @establishment.specialties.each do |specialty| %>
              <div class="flex items-start">
                <span class="text-sky-500 dark:text-sky-400 mr-2">-</span>
                <p class="text-gray-700 dark:text-slate-300"><%= specialty.name %></p>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 dark:text-slate-400">No hay especialidades registradas para este establecimiento.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Servicios Section -->
  <div class="max-w-5xl mx-auto mt-8 bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden border border-transparent dark:border-slate-700">
    <div class="flex">
      <div class="w-1/4 p-6 flex items-center justify-center bg-sky-500">
        <h2 class="text-2xl font-bold text-white">Servicios</h2>
      </div>
      <div class="w-3/4 p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% if @establishment.services.any? %>
            <% @establishment.services.each do |service| %>
              <div class="flex items-start">
                <span class="text-sky-500 dark:text-sky-400 mr-2">-</span>
                <p class="text-gray-700 dark:text-slate-300"><%= service.name %></p>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 dark:text-slate-400">No hay servicios registrados para este establecimiento.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Listado de Doctores Section -->
  <div class="max-w-5xl mx-auto mt-8 bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden border border-transparent dark:border-slate-700">
    <div class="p-6">
      <h2 class="text-2xl font-bold mb-6 break-words text-center text-sky-600 dark:text-sky-400">Listado de Doctores</h2>

      <% if @doctors.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @doctors.each do |doctor| %>
            <div class="bg-white dark:bg-slate-700 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden transition-all hover:shadow-lg border-t-4 border-sky-300 dark:border-sky-500 flex flex-col">
              <div class="p-4 flex flex-col flex-1">
                <h3 class="text-lg font-medium text-sky-600 dark:text-sky-400"><%= doctor.respond_to?(:display_name) ? doctor.display_name : doctor.name %></h3>
                <% if doctor.subspecialty.present? %>
                  <p class="text-gray-700 dark:text-slate-300 text-sm mt-1"><%= doctor.subspecialty.name %></p>
                <% elsif doctor.specialty.present? %>
                  <p class="text-gray-700 dark:text-slate-300 text-sm mt-1"><%= doctor.specialty.name %></p>
                <% end %>
                <% if doctor.medical_license.present? %>
                  <p class="text-gray-400 dark:text-slate-500 text-xs mt-1">Col. <%= doctor.medical_license %></p>
                <% end %>

                <%# Social icons %>
                <div class="flex items-center gap-2.5 mt-3">
                  <% if doctor.facebook_url.present? %>
                    <a href="<%= doctor.facebook_url %>" target="_blank" rel="noopener" class="text-gray-400 hover:text-blue-600 dark:text-slate-500 dark:hover:text-blue-400 transition"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg></a>
                  <% end %>
                  <% if doctor.instagram_url.present? %>
                    <a href="<%= doctor.instagram_url %>" target="_blank" rel="noopener" class="text-gray-400 hover:text-pink-500 dark:text-slate-500 dark:hover:text-pink-400 transition"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg></a>
                  <% end %>
                  <% if doctor.twitter_url.present? %>
                    <a href="<%= doctor.twitter_url %>" target="_blank" rel="noopener" class="text-gray-400 hover:text-gray-900 dark:text-slate-500 dark:hover:text-white transition"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg></a>
                  <% end %>
                  <% if doctor.linkedin_url.present? %>
                    <a href="<%= doctor.linkedin_url %>" target="_blank" rel="noopener" class="text-gray-400 hover:text-blue-700 dark:text-slate-500 dark:hover:text-blue-400 transition"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg></a>
                  <% end %>
                  <% if doctor.tiktok_url.present? %>
                    <a href="<%= doctor.tiktok_url %>" target="_blank" rel="noopener" class="text-gray-400 hover:text-gray-900 dark:text-slate-500 dark:hover:text-white transition"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/></svg></a>
                  <% end %>
                  <% if doctor.youtube_url.present? %>
                    <a href="<%= doctor.youtube_url %>" target="_blank" rel="noopener" class="text-gray-400 hover:text-red-600 dark:text-slate-500 dark:hover:text-red-400 transition"><svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg></a>
                  <% end %>
                </div>

                <div class="flex justify-end mt-auto pt-3">
                  <a href="<%= doctor_path(doctor) %>" class="inline-flex items-center px-3 py-1.5 text-white text-sm font-medium rounded-full transition-all shadow-sm hover:shadow-md transform hover:scale-105 bg-sky-500 hover:bg-sky-600">
                    <span>VER PERFIL</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-gray-50 dark:bg-slate-700 p-6 rounded-lg text-center">
          <p class="text-gray-500 dark:text-slate-400">No hay médicos asociados a este establecimiento.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
