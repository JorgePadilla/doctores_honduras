<div class="container mx-auto px-4 py-8">
  <div class="max-w-5xl mx-auto mb-6 flex items-center">
    <a href="/hospitales-y-clinicas" class="inline-flex items-center px-4 py-2 rounded-full text-white font-medium transition-all hover:shadow-md transform hover:scale-105 bg-sky-500 hover:bg-sky-600">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Volver a Hospitales y Clínicas
    </a>
  </div>

  <div class="max-w-5xl mx-auto bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden border border-transparent dark:border-slate-700">
    <!-- Building image banner -->
    <% if @establishment.building_image_url.present? %>
      <div class="w-full h-64 md:h-80 overflow-hidden">
        <img src="<%= @establishment.building_image_url %>" alt="<%= @establishment.name %> edificio" class="w-full h-full object-cover transition-all hover:scale-105">
      </div>
    <% end %>

    <div class="flex flex-col md:flex-row p-6">
      <div class="md:w-1/4 p-4">
        <% if @establishment.logo_url.present? %>
          <img src="<%= @establishment.logo_url %>" alt="<%= @establishment.name %> logo" class="w-full h-auto rounded-lg object-cover shadow-md">
        <% else %>
          <div class="w-full h-48 bg-gray-200 dark:bg-slate-700 rounded-lg flex items-center justify-center shadow-md">
            <span class="text-gray-500 dark:text-slate-400">Sin logo</span>
          </div>
        <% end %>
      </div>

      <div class="md:w-3/4 md:pl-8">
        <h1 class="text-3xl font-bold mb-4 text-sky-600 dark:text-sky-400"><%= @establishment.name %></h1>
        <p class="text-gray-700 dark:text-slate-300 mb-4 text-lg"><%= @establishment.est_type %></p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
          <div>
            <h3 class="text-lg font-medium mb-2 text-sky-600 dark:text-sky-400">Información de Contacto</h3>
            <div class="space-y-2">
              <p class="text-gray-600 dark:text-slate-400"><i class="fas fa-map-marker-alt mr-2"></i><%= @establishment.address %></p>
              <% if @establishment.phone.present? %>
                <p class="text-gray-600 dark:text-slate-400"><i class="fas fa-phone mr-2"></i><%= @establishment.phone %></p>
              <% end %>
              <% if @establishment.map_link.present? %>
                <p class="text-gray-600 dark:text-slate-400">
                  <i class="fas fa-map mr-2"></i>
                  <a href="<%= @establishment.map_link %>" target="_blank" class="text-sky-500 dark:text-sky-400 hover:underline">Ver en Google Maps</a>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Especialidades Section -->
  <div class="max-w-5xl mx-auto mt-8 bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden border border-transparent dark:border-slate-700">
    <div class="flex">
      <div class="w-1/4 p-6 flex items-center justify-center bg-sky-500">
        <h2 class="text-2xl font-bold text-white">Especialidades</h2>
      </div>
      <div class="w-3/4 p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% if @establishment.specialties.any? %>
            <% @establishment.specialties.each do |specialty| %>
              <div class="flex items-start">
                <span class="text-sky-500 dark:text-sky-400 mr-2">-</span>
                <p class="text-gray-700 dark:text-slate-300"><%= specialty.name %></p>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 dark:text-slate-400">No hay especialidades registradas para este establecimiento.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Servicios Section -->
  <div class="max-w-5xl mx-auto mt-8 bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden border border-transparent dark:border-slate-700">
    <div class="flex">
      <div class="w-1/4 p-6 flex items-center justify-center bg-sky-500">
        <h2 class="text-2xl font-bold text-white">Servicios</h2>
      </div>
      <div class="w-3/4 p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% if @establishment.services.any? %>
            <% @establishment.services.each do |service| %>
              <div class="flex items-start">
                <span class="text-sky-500 dark:text-sky-400 mr-2">-</span>
                <p class="text-gray-700 dark:text-slate-300"><%= service.name %></p>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 dark:text-slate-400">No hay servicios registrados para este establecimiento.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Listado de Doctores Section -->
  <div class="max-w-5xl mx-auto mt-8 bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden border border-transparent dark:border-slate-700">
    <div class="p-6">
      <h2 class="text-2xl font-bold mb-6 break-words text-center text-sky-600 dark:text-sky-400">Listado de Doctores</h2>

      <% if @doctors.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @doctors.each do |doctor| %>
            <div class="bg-white dark:bg-slate-700 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden transition-all hover:shadow-lg border-t-4 border-sky-300 dark:border-sky-500">
              <div class="p-4">
                <div class="flex justify-between items-start mb-3">
                  <h3 class="text-lg font-medium text-sky-600 dark:text-sky-400"><%= doctor.name %></h3>
                </div>

                <p class="text-gray-700 dark:text-slate-300 mb-2">Especialista en <%= doctor.specialty&.name %></p>
                <p class="text-gray-500 dark:text-slate-400 text-sm mb-4"><%= doctor.medical_license %></p>

                <div class="flex justify-end">
                  <a href="<%= doctor_path(doctor) %>" class="inline-flex items-center px-3 py-1.5 text-white text-sm font-medium rounded-full transition-all shadow-sm hover:shadow-md transform hover:scale-105 bg-sky-500 hover:bg-sky-600">
                    <span>VER PERFIL COMPLETO</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-gray-50 dark:bg-slate-700 p-6 rounded-lg text-center">
          <p class="text-gray-500 dark:text-slate-400">No hay médicos asociados a este establecimiento.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
