<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <h1 class="text-4xl font-bold mb-2 text-primary-700 dark:text-sky-400">Crear Perfil de Doctor</h1>
      <p class="text-lg text-gray-600 dark:text-slate-400">Completa la información de tu perfil para que los pacientes puedan encontrarte</p>
    </div>

    <%= form_with model: @doctor_profile, url: profile_path, class: "bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 p-6 border-l-4 border-l-sky-300 dark:border-l-sky-500", multipart: true do |form| %>
      <% if @doctor_profile.errors.any? %>
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl p-4 mb-6">
          <h2 class="text-red-800 dark:text-red-300 font-medium mb-2">
            <%= pluralize(@doctor_profile.errors.count, "error") %> impidieron guardar el perfil:
          </h2>
          <ul class="list-disc list-inside text-red-700 dark:text-red-300">
            <% @doctor_profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Información Básica -->
        <div class="md:col-span-2">
          <h2 class="text-xl font-semibold mb-4 text-sky-600 dark:text-sky-400">Información Básica</h2>
        </div>

        <div class="md:col-span-2">
          <%= form.label :name, "Nombre completo", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2" %>
          <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white", required: true %>
        </div>

        <div class="md:col-span-2 grid grid-cols-1 md:grid-cols-2 gap-6">
          <div data-controller="subspecialty">
            <div class="mb-4">
              <%= form.label :specialty_id, "Especialidad", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2" %>
              <%= form.select :specialty_id,
                              options_for_select(@specialties.map { |s| [s.name, s.id] }, @doctor_profile.specialty_id),
                              { include_blank: "Selecciona una especialidad" },
                              { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white",
                                data: { action: "change->subspecialty#updateSubspecialties", subspecialty_target: "specialty" }, required: true } %>
            </div>

            <div>
              <%= form.label :subspecialty_id, "Subespecialidad", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2" %>
              <%= form.select :subspecialty_id,
                              options_for_select(@subspecialties.map { |s| [s.name, s.id] }, @doctor_profile.subspecialty_id),
                              { include_blank: "Selecciona una subespecialidad (opcional)" },
                              { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white",
                                data: { subspecialty_target: "subspecialty" } } %>
            </div>
          </div>

          <div>
            <%= form.label :medical_license, "Licencia médica", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2" %>
            <%= form.text_field :medical_license, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white" %>
          </div>
        </div>

        <!-- Información de Contacto -->
        <div class="md:col-span-2 mt-4">
          <h2 class="text-xl font-semibold mb-4 text-sky-600 dark:text-sky-400">Información de Contacto</h2>
        </div>


        <div>
          <%= form.label :website, "Sitio web", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2" %>
          <%= form.text_field :website, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white" %>
        </div>


        <div>
          <%= form.label :department_id, "Departamento", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2" %>
          <%= form.select :department_id,
                          options_for_select(@departments.map { |d| [d.name, d.id] }, @doctor_profile.department_id),
                          { include_blank: "Selecciona un departamento" },
                          { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white", required: true } %>
        </div>

        <div>
          <%= form.label :city_id, "Ciudad", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2" %>
          <%= form.select :city_id,
                          options_for_select(@cities.map { |c| [c.name, c.id] }, @doctor_profile.city_id),
                          { include_blank: "Selecciona una ciudad" },
                          { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white", required: true } %>
        </div>

        <!-- Información Adicional -->
        <div class="md:col-span-2 mt-4">
          <h2 class="text-xl font-semibold mb-4 text-sky-600 dark:text-sky-400">Información Adicional</h2>
        </div>

        <div class="md:col-span-2">
          <%= form.label :description, "Biografía/Descripción", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2" %>
          <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white", placeholder: "Describe tu experiencia, educación, y enfoque médico..." %>
        </div>

        <div class="md:col-span-2" data-controller="image-upload">
          <%= form.label :image_file, "Imagen de perfil", class: "block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2" %>

          <!-- Hidden file input -->
          <%= form.file_field :image_file,
              accept: "image/*",
              class: "hidden",
              data: {
                image_upload_target: "input",
                action: "change->image-upload#fileSelected"
              } %>

          <!-- Drop zone -->
          <div data-image-upload-target="dropzone"
               class="border-2 border-dashed border-gray-300 dark:border-slate-600 rounded-lg p-8 text-center cursor-pointer hover:border-gray-400 dark:hover:border-slate-500 transition-colors"
               data-action="click->image-upload#browse">
            <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-slate-500" stroke="currentColor" fill="none" viewBox="0 0 48 48">
              <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <p class="mt-2 text-sm text-gray-600 dark:text-slate-400">
              <span class="font-semibold text-sky-500 dark:text-sky-400">Haz clic para seleccionar</span> o arrastra una imagen aquí
            </p>
            <p class="mt-1 text-xs text-gray-500 dark:text-slate-400">PNG, JPG, GIF hasta 5MB</p>
          </div>

          <!-- Preview -->
          <div data-image-upload-target="preview" class="hidden mt-4">
            <div class="relative inline-block">
              <img data-image-upload-target="previewImage"
                   class="w-48 h-48 object-cover rounded-lg border border-gray-200 dark:border-slate-600"
                   alt="Vista previa" />
              <button type="button"
                      data-image-upload-target="removeButton"
                      data-action="click->image-upload#removeImage"
                      class="absolute top-2 right-2 bg-red-500 text-white rounded-full p-2 hover:bg-red-600 transition-colors shadow-lg">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
            <p class="mt-2 text-sm text-gray-600 dark:text-slate-400">
              <span class="font-medium" data-image-upload-target="fileName"></span>
            </p>
          </div>

          <p class="mt-2 text-xs text-gray-500 dark:text-slate-400">
            La imagen se subirá a AWS S3 al crear el perfil
          </p>
        </div>
      </div>

      <div class="mt-8 flex justify-end space-x-4">
        <a href="<%= profile_path %>" class="px-6 py-2.5 border border-gray-300 rounded-full text-gray-700 transition-all hover:shadow-md transform hover:scale-105 hover:bg-gray-50 dark:border-slate-600 dark:text-slate-300 dark:bg-slate-700 dark:hover:bg-slate-600">
          Cancelar
        </a>
        <%= form.submit "Crear Perfil", class: "px-6 py-2.5 rounded-full text-white font-medium transition-all shadow-md hover:shadow-lg transform hover:scale-105 bg-sky-500 hover:bg-sky-600" %>
      </div>
    <% end %>
  </div>
</div>
