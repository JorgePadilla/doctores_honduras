<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <h1 class="text-3xl font-bold mb-2" style="color: #38bdf8;">Crear Perfil de Doctor</h1>
      <p class="text-gray-600">Completa la información de tu perfil para que los pacientes puedan encontrarte.</p>
    </div>

    <%= form_with model: @doctor_profile, url: profile_path, class: "bg-white rounded-lg shadow-lg p-6", multipart: true do |form| %>
      <% if @doctor_profile.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
          <h2 class="text-red-800 font-medium mb-2">
            <%= pluralize(@doctor_profile.errors.count, "error") %> impidieron guardar el perfil:
          </h2>
          <ul class="list-disc list-inside text-red-700">
            <% @doctor_profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Información Básica -->
        <div class="md:col-span-2">
          <h2 class="text-xl font-semibold mb-4" style="color: #38bdf8;">Información Básica</h2>
        </div>

        <div>
          <%= form.label :name, "Nombre completo", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
        </div>

        <div>
          <%= form.label :specialization, "Especialidad", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :specialization, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
        </div>

        <div>
          <%= form.label :subspecialty, "Subespecialidad", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :subspecialty, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= form.label :medical_license, "Licencia médica", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :medical_license, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Información de Contacto -->
        <div class="md:col-span-2 mt-4">
          <h2 class="text-xl font-semibold mb-4" style="color: #38bdf8;">Información de Contacto</h2>
        </div>


        <div>
          <%= form.label :website, "Sitio web", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :website, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="md:col-span-2">
          <%= form.label :address, "Dirección", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :address, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
        </div>

        <div>
          <%= form.label :city, "Ciudad", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :city, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
        </div>

        <div>
          <%= form.label :state, "Estado/Departamento", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :state, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
        </div>

        <!-- Información Adicional -->
        <div class="md:col-span-2 mt-4">
          <h2 class="text-xl font-semibold mb-4" style="color: #38bdf8;">Información Adicional</h2>
        </div>

        <div class="md:col-span-2">
          <%= form.label :description, "Biografía/Descripción", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "Describe tu experiencia, educación, y enfoque médico..." %>
        </div>

        <div class="md:col-span-2">
          <%= form.label :image, "Imagen de perfil", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.file_field :image, accept: "image/jpeg, image/png, image/jpg, image/gif", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">Formatos aceptados: JPEG, PNG, GIF. Tamaño máximo: 5MB</p>
        </div>
      </div>

      <div class="mt-8 flex justify-end space-x-4">
        <a href="<%= profile_path %>" class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition-colors">
          Cancelar
        </a>
        <%= form.submit "Crear Perfil", class: "px-6 py-2 rounded-md text-white font-medium transition-all shadow-sm hover:shadow-md", style: "background-color: #38bdf8;" %>
      </div>
    <% end %>
  </div>
</div>