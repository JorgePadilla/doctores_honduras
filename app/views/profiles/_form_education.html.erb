<div class="bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 border border-gray-200 dark:border-slate-700 p-6 mb-6" data-controller="nested-fields">
  <div class="flex items-center justify-between mb-5 pb-4 border-b border-gray-200 dark:border-slate-700">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 rounded-lg bg-sky-50 dark:bg-sky-900/30 flex items-center justify-center text-sky-600 dark:text-sky-400">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path d="M12 14l9-5-9-5-9 5 9 5z" />
          <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
        </svg>
      </div>
      <div>
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Formación Académica</h2>
        <p class="text-sm text-gray-500 dark:text-slate-400">Títulos y estudios realizados</p>
      </div>
    </div>
    <button type="button" data-action="nested-fields#add"
            class="inline-flex items-center px-4 py-1.5 text-sm font-medium text-white bg-sky-500 rounded-full transition-all hover:shadow-md transform hover:scale-105 hover:bg-sky-600 dark:bg-sky-600 dark:hover:bg-sky-500">
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Agregar
    </button>
  </div>

  <template data-nested-fields-target="template">
    <div data-nested-fields-entry class="border border-gray-200 dark:border-slate-600 rounded-lg p-4 mb-4">
      <div class="flex justify-between items-start mb-3">
        <h3 class="text-sm font-medium text-gray-700 dark:text-slate-300">Nueva formación</h3>
        <button type="button" data-action="nested-fields#remove" class="text-red-500 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 text-sm">Eliminar</button>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1">Institución</label>
          <input type="text" name="doctor_profile[doctor_educations_attributes][NEW_RECORD][institution]"
                 class="w-full px-3 py-2 border border-gray-300 dark:border-slate-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:text-white" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1">Título</label>
          <input type="text" name="doctor_profile[doctor_educations_attributes][NEW_RECORD][degree]"
                 class="w-full px-3 py-2 border border-gray-300 dark:border-slate-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:text-white">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1">Año de graduación</label>
          <input type="number" name="doctor_profile[doctor_educations_attributes][NEW_RECORD][graduation_year]"
                 min="1950" max="<%= Date.today.year %>"
                 class="w-full px-3 py-2 border border-gray-300 dark:border-slate-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:text-white">
        </div>
      </div>
    </div>
  </template>

  <div data-nested-fields-target="container">
    <% @doctor_profile.doctor_educations.each_with_index do |education, index| %>
      <%= form.fields_for :doctor_educations, education, child_index: education.persisted? ? education.id : index do |ef| %>
        <div data-nested-fields-entry class="border border-gray-200 dark:border-slate-600 rounded-lg p-4 mb-4">
          <div class="flex justify-between items-start mb-3">
            <h3 class="text-sm font-medium text-gray-700 dark:text-slate-300">Formación #<%= index + 1 %></h3>
            <button type="button" data-action="nested-fields#remove" class="text-red-500 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 text-sm">Eliminar</button>
          </div>
          <%= ef.hidden_field :_destroy %>
          <%= ef.hidden_field :id if education.persisted? %>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1">Institución</label>
              <%= ef.text_field :institution, class: "w-full px-3 py-2 border border-gray-300 dark:border-slate-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:text-white", required: true %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1">Título</label>
              <%= ef.text_field :degree, class: "w-full px-3 py-2 border border-gray-300 dark:border-slate-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:text-white" %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1">Año de graduación</label>
              <%= ef.number_field :graduation_year, min: 1950, max: Date.today.year, class: "w-full px-3 py-2 border border-gray-300 dark:border-slate-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-slate-700 dark:text-white" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
