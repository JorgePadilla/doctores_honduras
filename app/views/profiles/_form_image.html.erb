<div class="bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 border border-gray-200 dark:border-slate-700 p-6 mb-6" data-controller="image-upload">
  <div class="flex items-center gap-3 mb-5 pb-4 border-b border-gray-200 dark:border-slate-700">
    <div class="w-10 h-10 rounded-lg bg-sky-50 dark:bg-sky-900/30 flex items-center justify-center text-sky-600 dark:text-sky-400">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
    </div>
    <div>
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Imagen de Perfil</h2>
      <p class="text-sm text-gray-500 dark:text-slate-400">Foto profesional para tu perfil</p>
    </div>
  </div>

  <!-- Hidden file input -->
  <%= form.file_field :image_file,
      accept: "image/*",
      class: "hidden",
      data: {
        image_upload_target: "input",
        action: "change->image-upload#fileSelected"
      } %>

  <!-- Current image (shown when image exists and no new file selected) -->
  <% if @doctor_profile.image_url.present? %>
    <div data-image-upload-target="currentImage" class="flex flex-col sm:flex-row items-center gap-5">
      <img src="<%= @doctor_profile.image_url %>" alt="<%= @doctor_profile.display_name %>" class="w-36 h-36 object-cover rounded-xl border-2 border-gray-200 dark:border-slate-600 shadow-sm" />
      <div class="flex flex-col items-center sm:items-start gap-2">
        <p class="text-sm text-gray-600 dark:text-slate-400">Imagen actual</p>
        <button type="button"
                data-action="click->image-upload#showReplace"
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-sky-600 dark:text-sky-400 bg-sky-50 dark:bg-sky-900/30 border border-sky-200 dark:border-sky-800 rounded-lg hover:bg-sky-100 dark:hover:bg-sky-900/50 transition-colors">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          Reemplazar imagen
        </button>
      </div>
    </div>
  <% end %>

  <!-- Drop zone (hidden when current image exists, shown when no image or replacing) -->
  <div data-image-upload-target="dropzone"
       class="<%= @doctor_profile.image_url.present? ? 'hidden' : '' %> border-2 border-dashed border-gray-300 dark:border-slate-600 rounded-lg p-8 text-center cursor-pointer hover:border-sky-400 dark:hover:border-sky-500 transition-colors"
       data-action="click->image-upload#browse dragenter->image-upload#highlight dragover->image-upload#highlight dragleave->image-upload#unhighlight drop->image-upload#handleDrop">
    <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-slate-500" stroke="currentColor" fill="none" viewBox="0 0 48 48">
      <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
    </svg>
    <p class="mt-2 text-sm text-gray-600 dark:text-slate-400">
      <span class="font-semibold text-sky-500 dark:text-sky-400">Haz clic para seleccionar</span> o arrastra una imagen aquí
    </p>
    <p class="mt-1 text-xs text-gray-500 dark:text-slate-500">PNG, JPG, GIF hasta 5MB</p>
    <% if @doctor_profile.image_url.present? %>
      <button type="button" data-action="click->image-upload#cancelReplace" class="mt-3 text-xs text-gray-500 dark:text-slate-400 hover:text-gray-700 dark:hover:text-slate-300 underline">Cancelar</button>
    <% end %>
  </div>

  <!-- Preview (shown after selecting a new file) -->
  <div data-image-upload-target="preview" class="hidden mt-4">
    <div class="flex flex-col sm:flex-row items-center gap-5">
      <div class="relative">
        <img data-image-upload-target="previewImage"
             class="w-36 h-36 object-cover rounded-xl border-2 border-sky-300 dark:border-sky-500 shadow-sm"
             alt="Vista previa" />
        <button type="button"
                data-action="click->image-upload#removeImage"
                class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full p-1.5 hover:bg-red-600 transition-colors shadow-lg">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div>
        <p class="text-sm font-medium text-sky-600 dark:text-sky-400">Nueva imagen seleccionada</p>
        <p class="text-sm text-gray-500 dark:text-slate-400" data-image-upload-target="fileName"></p>
        <p class="mt-1 text-xs text-gray-400 dark:text-slate-500">Se subirá al guardar el perfil</p>
      </div>
    </div>
  </div>
</div>
