<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <% if @user.doctor_profile %>
      <!-- Profile exists - show doctor profile -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden border-l-4 border-l-sky-300 dark:border-l-sky-500 transition-all hover:shadow-lg">
        <div class="flex flex-col md:flex-row">
          <div class="md:w-1/3 p-6">
            <% if @doctor_profile.image_url.present? %>
              <img src="<%= @doctor_profile.image_url %>" alt="<%= @doctor_profile.display_name %>" class="w-full h-auto rounded-lg object-cover" />
            <% else %>
              <div class="w-full h-64 bg-gray-200 dark:bg-slate-700 rounded-lg flex items-center justify-center">
                <span class="text-gray-500 dark:text-slate-400">Sin imagen</span>
              </div>
            <% end %>

            <div class="mt-6">
              <a href="<%= edit_profile_path %>" class="w-full inline-flex justify-center items-center px-5 py-2.5 rounded-full text-white font-medium transition-all shadow-md hover:shadow-lg transform hover:scale-105 bg-sky-500 hover:bg-sky-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                Editar Perfil
              </a>
            </div>

            <%# Social media links %>
            <% social_links = [
              { url: @doctor_profile.facebook_url, icon: "M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z", label: "Facebook" },
              { url: @doctor_profile.instagram_url, icon: "M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z", label: "Instagram" },
              { url: @doctor_profile.twitter_url, label: "X" },
              { url: @doctor_profile.linkedin_url, label: "LinkedIn" },
              { url: @doctor_profile.tiktok_url, label: "TikTok" },
              { url: @doctor_profile.youtube_url, label: "YouTube" }
            ].select { |l| l[:url].present? } %>

            <% if social_links.any? %>
              <div class="mt-4 flex flex-wrap gap-2">
                <% social_links.each do |link| %>
                  <a href="<%= link[:url] %>" target="_blank" rel="noopener noreferrer"
                     class="inline-flex items-center px-3 py-1.5 text-sm rounded-full bg-sky-50 dark:bg-sky-900/30 text-sky-600 dark:text-sky-400 hover:bg-sky-100 dark:hover:bg-sky-900/50 transition-colors">
                    <%= link[:label] %>
                  </a>
                <% end %>
              </div>
            <% end %>
          </div>

          <div class="md:w-2/3 p-6">
            <h1 class="text-2xl font-bold mb-2 text-sky-600 dark:text-sky-400"><%= @doctor_profile.display_name %></h1>
            <p class="text-lg text-gray-600 dark:text-slate-400 mb-2">Especialista en <%= @doctor_profile.specialty&.name %></p>
            <% if @doctor_profile.subspecialty.present? %>
              <p class="text-lg text-gray-600 dark:text-slate-400 mb-4">Subespecialidad: <%= @doctor_profile.subspecialty.name %></p>
            <% end %>

            <% if @doctor_profile.description.present? %>
              <div class="mb-6">
                <h2 class="text-xl font-semibold mb-2 text-sky-600 dark:text-sky-400">Sobre el médico</h2>
                <p class="text-gray-700 dark:text-slate-300"><%= @doctor_profile.description %></p>
              </div>
            <% end %>

            <%# Services %>
            <% if @doctor_profile.services.any? %>
              <div class="mb-6">
                <h2 class="text-xl font-semibold mb-2 text-sky-600 dark:text-sky-400">Servicios</h2>
                <div class="flex flex-wrap gap-2">
                  <% @doctor_profile.services.each do |service| %>
                    <span class="inline-block px-3 py-1 text-sm rounded-full text-white bg-sky-500"><%= service.name %></span>
                  <% end %>
                </div>
              </div>
            <% end %>

            <%# Languages %>
            <% if @doctor_profile.languages.present? && @doctor_profile.languages.reject(&:blank?).any? %>
              <div class="mb-6">
                <h2 class="text-xl font-semibold mb-2 text-sky-600 dark:text-sky-400">Idiomas</h2>
                <div class="flex flex-wrap gap-2">
                  <% @doctor_profile.languages.reject(&:blank?).each do |language| %>
                    <span class="inline-block px-3 py-1 text-sm rounded-full bg-sky-50 dark:bg-sky-900/30 text-sky-700 dark:text-sky-400"><%= language %></span>
                  <% end %>
                </div>
              </div>
            <% end %>

            <div class="mb-6">
              <h2 class="text-xl font-semibold mb-2 text-sky-600 dark:text-sky-400">Información de Contacto</h2>
              <div class="space-y-2">
                <p class="text-gray-700 dark:text-slate-300"><strong>Ubicación:</strong> <%= @doctor_profile.city&.name %>, <%= @doctor_profile.department&.name %></p>
                <% if @doctor_profile.website.present? %>
                  <p class="text-gray-700 dark:text-slate-300">
                    <strong>Sitio web:</strong>
                    <a href="<%= @doctor_profile.website %>" target="_blank" class="hover:underline text-sky-600 dark:text-sky-400"><%= @doctor_profile.website %></a>
                  </p>
                <% end %>
                <% if @doctor_profile.medical_license.present? %>
                  <p class="text-gray-700 dark:text-slate-300"><strong>No. de colegiación:</strong> <%= @doctor_profile.medical_license %></p>
                <% end %>
              </div>
            </div>

            <%# Education %>
            <% educations = @doctor_profile.doctor_educations.ordered %>
            <% if educations.any? %>
              <div class="mb-6">
                <h2 class="text-xl font-semibold mb-2 text-sky-600 dark:text-sky-400">Formación Académica</h2>
                <div class="space-y-3">
                  <% educations.each do |edu| %>
                    <div class="border-l-4 pl-4 border-sky-300 dark:border-sky-500">
                      <p class="font-medium text-gray-800 dark:text-slate-200"><%= edu.institution %></p>
                      <% if edu.degree.present? %>
                        <p class="text-gray-600 dark:text-slate-400"><%= edu.degree %></p>
                      <% end %>
                      <% if edu.graduation_year.present? %>
                        <p class="text-sm text-gray-500 dark:text-slate-500"><%= edu.graduation_year %></p>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <%# Certifications %>
            <% certifications = @doctor_profile.doctor_certifications.ordered %>
            <% if certifications.any? %>
              <div class="mb-6">
                <h2 class="text-xl font-semibold mb-2 text-sky-600 dark:text-sky-400">Capacitaciones y Certificaciones</h2>
                <div class="space-y-3">
                  <% certifications.each do |cert| %>
                    <div class="border-l-4 pl-4 border-sky-300 dark:border-sky-500">
                      <p class="font-medium text-gray-800 dark:text-slate-200"><%= cert.name %></p>
                      <% if cert.institution.present? %>
                        <p class="text-gray-600 dark:text-slate-400"><%= cert.institution %></p>
                      <% end %>
                      <% if cert.year.present? %>
                        <p class="text-sm text-gray-500 dark:text-slate-500"><%= cert.year %></p>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <%# Branches %>
            <% branches = @doctor_profile.doctor_branches.ordered %>
            <% if branches.any? %>
              <div class="mb-6">
                <h2 class="text-xl font-semibold mb-2 text-sky-600 dark:text-sky-400">Sucursales</h2>
                <% branches.each do |branch| %>
                  <div class="mb-4 border-l-4 pl-4 border-sky-300 dark:border-sky-500">
                    <h3 class="text-lg font-medium text-sky-600 dark:text-sky-400"><%= branch.name %></h3>
                    <p class="text-gray-600 dark:text-slate-400"><%= branch.address %></p>
                    <% if branch.city.present? || branch.department.present? %>
                      <p class="text-gray-600 dark:text-slate-400"><%= [branch.city&.name, branch.department&.name].compact.join(", ") %></p>
                    <% end %>
                    <% if paid_plan? && branch.phone.present? %>
                      <p class="text-gray-600 dark:text-slate-400">Tel: <%= branch.phone %></p>
                    <% end %>
                    <% if branch.map_link.present? %>
                      <a href="<%= branch.map_link %>" target="_blank" class="text-sm hover:underline text-sky-600 dark:text-sky-400">Ver en mapa</a>
                    <% end %>
                    <% if paid_plan? %>
                      <% schedules = branch.branch_schedules.reject { |s| s.opens_at.nil? }.sort_by(&:day_of_week) %>
                      <% if schedules.any? %>
                        <div class="mt-2">
                          <p class="text-sm font-medium text-gray-700 dark:text-slate-300 mb-1">Horarios:</p>
                          <div class="text-sm text-gray-600 dark:text-slate-400 space-y-0.5">
                            <% schedules.each do |schedule| %>
                              <p><span class="w-24 inline-block"><%= schedule.day_name %>:</span> <%= schedule.opens_at.strftime("%H:%M") %> - <%= schedule.closes_at.strftime("%H:%M") %></p>
                            <% end %>
                          </div>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>
      <!-- No profile exists - redirect to creation -->
      <div class="text-center py-12">
        <div class="max-w-md mx-auto">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 dark:text-slate-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">No tienes un perfil creado</h2>
          <p class="text-gray-600 dark:text-slate-400 mb-6">Crea tu perfil de doctor para que los pacientes puedan encontrarte.</p>
          <a href="<%= new_profile_path %>" class="inline-flex items-center px-6 py-3 rounded-full text-white font-medium transition-all shadow-md hover:shadow-lg transform hover:scale-105 bg-sky-500 hover:bg-sky-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Crear Perfil
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>
