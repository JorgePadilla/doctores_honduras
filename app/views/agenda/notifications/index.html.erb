<div class="container mx-auto px-4 py-8 max-w-3xl">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold text-primary-700 dark:text-sky-400">Notificaciones</h1>
    <% if @notifications.any?(&:unread?) %>
      <%= button_to "Marcar todas como leídas", mark_all_as_read_agenda_notifications_path, method: :patch,
          class: "text-sky-600 dark:text-sky-400 hover:underline text-sm font-medium" %>
    <% end %>
  </div>

  <% if @notifications.any? %>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 overflow-hidden">
      <% @notifications.each do |notification| %>
        <div class="flex items-start justify-between p-5 border-b border-gray-200 dark:border-slate-700 last:border-b-0 <%= notification.read? ? 'opacity-50' : 'hover:bg-sky-50 dark:hover:bg-slate-700/50' %> transition-colors">
          <div class="flex-1">
            <div class="flex items-center space-x-2">
              <% unless notification.read? %>
                <span class="w-2.5 h-2.5 bg-sky-500 rounded-full flex-shrink-0"></span>
              <% end %>
              <p class="text-sm text-gray-900 dark:text-white <%= notification.read? ? '' : 'font-medium' %>"><%= notification.message %></p>
            </div>
            <p class="text-xs text-gray-500 dark:text-slate-400 mt-1 <%= notification.read? ? '' : 'ml-4.5' %>"><%= time_ago_in_words(notification.created_at) %> atrás</p>
          </div>
          <div class="flex items-center space-x-3 ml-4">
            <% if notification.appointment %>
              <%= link_to "Ver", agenda_appointment_path(notification.appointment), class: "text-sky-600 dark:text-sky-400 text-sm hover:underline font-medium" %>
            <% end %>
            <% unless notification.read? %>
              <%= button_to "Leída", mark_as_read_agenda_notification_path(notification), method: :patch,
                  class: "text-gray-400 hover:text-sky-600 dark:hover:text-sky-400 text-sm transition-colors" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md dark:shadow-slate-900/50 p-12 text-center">
      <svg class="mx-auto w-12 h-12 text-gray-300 dark:text-slate-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/></svg>
      <p class="text-gray-500 dark:text-slate-400 font-medium">No tienes notificaciones</p>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "← Volver a la agenda", agenda_appointments_path, class: "text-sky-600 dark:text-sky-400 hover:underline text-sm font-medium" %>
  </div>
</div>
