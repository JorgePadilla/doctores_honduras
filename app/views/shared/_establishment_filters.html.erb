<div class="bg-white dark:bg-slate-800 shadow-md dark:shadow-slate-900/50 rounded-lg p-4 mb-6 border border-transparent dark:border-slate-700">
  <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4"><%= t('establishments.filters.title') %></h3>

  <%= form_with url: establishments_path, method: :get, class: "space-y-4", data: { turbo_frame: "establishments-list", controller: "form" } do |form| %>
    <% if params[:q].present? %>
      <%= form.hidden_field :q, value: params[:q] %>
    <% end %>

    <div>
      <label for="specialty_id" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1">
        <%= t('establishments.filters.specialty') %>
      </label>
      <div class="relative">
        <%= form.select :specialty_id,
                       options_for_select(@all_specialties.map { |s| [s.name, s.id] }, params[:specialty_id]),
                       { include_blank: t('establishments.filters.all_specialties') },
                       class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 dark:border-slate-600 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm rounded-md appearance-none dark:bg-slate-700 dark:text-white",
                       data: { action: "change->form#submit" } %>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700 dark:text-slate-400">
          <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>
    </div>

    <div>
      <label for="service_id" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-1">
        <%= t('establishments.filters.service') %>
      </label>
      <div class="relative">
        <%= form.select :service_id,
                       options_for_select(@all_services.map { |s| [s.name, s.id] }, params[:service_id]),
                       { include_blank: t('establishments.filters.all_services') },
                       class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 dark:border-slate-600 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm rounded-md appearance-none dark:bg-slate-700 dark:text-white",
                       data: { action: "change->form#submit" } %>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700 dark:text-slate-400">
          <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </div>
      </div>
    </div>

    <div class="flex justify-between pt-2">
      <%= form.submit t('establishments.filters.apply'),
                     class: "inline-flex justify-center items-center py-2 px-6 border border-transparent shadow-sm text-sm font-medium rounded-full text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 transition-all hover:shadow-md transform hover:scale-105 bg-sky-500 hover:bg-sky-600" %>

      <% if params[:specialty_id].present? || params[:service_id].present? %>
        <%= link_to t('establishments.filters.clear'),
                   establishments_path(q: params[:q]),
                   class: "inline-flex justify-center items-center py-2 px-4 border border-gray-300 dark:border-slate-600 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-slate-300 bg-white dark:bg-slate-700 hover:bg-gray-50 dark:hover:bg-slate-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500" %>
      <% end %>
    </div>
  <% end %>
</div>
