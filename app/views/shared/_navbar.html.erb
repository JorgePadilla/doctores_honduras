          <% end %>
          <% if Current.user.profile_type != "paciente" %>
            <a href="<%= profile_path %>" class="block py-2 text-white hover:text-primary-200 transition">Mi Perfil</a>
          <% end %>
          <a href="<%= dashboard_path %>" class="block py-2 text-white hover:text-primary-200 transition">Panel de Control</a>
          <% if Current.user.profile_type == "vendor" %>
            <a href="<%= vendor_products_path %>" class="block py-2 text-white hover:text-primary-200 transition">Mis Productos</a>
          <% end %>
